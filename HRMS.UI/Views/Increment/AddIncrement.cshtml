@{
    ViewData["Title"] = "Employee Increment";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
    string baseUrl = Configuration["BaseUrlSettings:baseUrl"];
}

<div class="card">
    <div class="card-header bg-transparent ml-0 py-0">

        <div class="card">
            <div class="card-header bg-transparent">
                <div class="row align-items-center">
                    <div class="col">
                        <h5 class="pt-2 mb-0">
                            Add Employee Increment/Decrement
                        </h5>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <form>
                    <div class="col-md-10 mx-auto">
                        <div class="row mb-3 align-items-center">
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="fromDate" class="me-2 mb-0" style="width: 100px;">Date:</label>
                                <input type="date" class="form-control" id="fromDate">
                            </div>

                            <div class="col-md-6 d-flex align-items-center">
                                <label for="todate" class="me-2 mb-0" style="width: 100px;">Effect Date:</label>
                                <input type="date" class="form-control" id="todate">
                            </div>
                        </div>

                        <div class="row mb-3 align-items-center">
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="selecttypeid" class="me-2 mb-0" style="width: 100px;">Select Type:</label>
                                <select class="form-control" id="selecttypeid">
                                    <option value="1">Revise Profile</option>
                                </select>
                            </div>

                            <div class="col-md-6 d-flex align-items-center">
                                <label for="branchid" class="me-2 mb-0" style="width: 100px;">Branch:</label>
                                <select class="form-control" id="branchid">
                                    <option value="0">--Select--</option>
                                    <option value="1">GKP</option>
                                    <option value="2">Head Office</option>
                                    <option value="3">UP</option>
                                </select>
                            </div>

                        </div>

                        <div class="row mb-3 align-items-center">
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="empid" class="me-2 mb-0" style="width: 100px;">Employee Code/Name:</label>
                                <input type="text" class="form-control form-control-sm" id="empid" placeholder="Employee Code or Name">
                            </div>

                            <div class="col-md-6 d-flex align-items-center">
                                <label for="employeeid" class="me-2 mb-0" style="width: 100px;">Employee:</label>
                                <select class="form-control" id="employeeid">
                                    <option value="0">--Select Employee--</option>
                                </select>
                            </div>

                        </div>
                        <div class="row mb-3 align-items-center">
                           
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="reasonid" class="me-2 mb-0" style="width: 100px;">Reason:</label>
                                <select class="form-control" id="reasonid">
                                    <option value="0">-- Select--</option>
                                    <option value="1">Add Other Allowance</option>
                                    <option value="2">Department Change</option>
                                    <option value="3">Designation Change</option>
                                    <option value="4">Increment</option>
                                    <option value="5">Internal Transfer</option>
                                    <option value="6">New Joining</option>
                                    <option value="7">PF Calculation</option>
                                    <option value="8">PF Calculation</option>
                                    <option value="9">Probation To Confirmation</option>
                                    <option value="10">Promotion</option>
                                    <option value="11">Revised Salary Structure</option>
                                </select>
                            </div>

                        </div>
                    </div>
                </form>
            </div>

            <div class="card-header bg-transparent">
                <div class="row align-items-center">

                    <div class="col-auto">
                        <a href='@Url.Action("EmployeeIncrement", "Increment")' class="btn btn-primary">Back</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


