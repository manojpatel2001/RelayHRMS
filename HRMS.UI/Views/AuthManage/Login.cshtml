    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            height: 100vh;
            overflow: hidden;
            display: flex;
        }

        /* Left Side - Background with Content */
        .left-panel {
            flex: 1;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            position: relative;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: white;
            padding: 40px;
            height: 100vh;
            overflow: hidden;
        }

            /* Background Animation Elements */
            .left-panel::before {
                content: '';
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%;
                background: radial-gradient(circle at 20% 80%, rgba(255,255,255,0.1) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(255,255,255,0.1) 0%, transparent 50%);
                animation: float 8s ease-in-out infinite;
                z-index: 1;
            }

            .left-panel::after {
                content: '';
                position: absolute;
                bottom: -150px;
                right: -150px;
                width: 400px;
                height: 400px;
                background: linear-gradient(45deg, rgba(255,255,255,0.05) 50%, transparent 50%);
                border-radius: 50%;
                animation: rotate 12s linear infinite;
                z-index: 1;
            }

        .floating-shapes {
            position: absolute;
            width: 100%;
            height: 100%;
            z-index: 1;
        }

        .shape {
            position: absolute;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            animation: float-shapes 6s ease-in-out infinite;
        }

            .shape:nth-child(1) {
                width: 80px;
                height: 80px;
                top: 20%;
                left: 10%;
                animation-delay: 0s;
            }

            .shape:nth-child(2) {
                width: 120px;
                height: 120px;
                bottom: 30%;
                left: 15%;
                animation-delay: 2s;
            }

            .shape:nth-child(3) {
                width: 60px;
                height: 60px;
                top: 70%;
                right: 20%;
                animation-delay: 4s;
            }

        @@keyframes float {
            0%, 100%

        {
            transform: translate(0, 0) rotate(0deg);
        }

        33% {
            transform: translate(30px, -30px) rotate(120deg);
        }

        66% {
            transform: translate(-20px, 20px) rotate(240deg);
        }

        }

        @@keyframes rotate {
            0%

        {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }

        }

        @@keyframes float-shapes {
            0%, 100%

        {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-20px);
        }

        }

        /* Left Panel Content */
        .welcome-content {
            position: relative;
            z-index: 2;
            max-width: 600px;
        }

        .welcome-title {
            font-size: 2.75rem;
            font-weight: 600;
            margin-bottom: 20px;
            line-height: 1.2;
            color:white;
            text-shadow: 0 2px 8px rgba(0,0,0,0.25);
        }

        .welcome-subtitle {
            font-size: 1.2rem;
            opacity: 0.95;
            margin-bottom: 30px;
            line-height: 1.5;
            font-weight: 300;
        }

        .feature-list {
            list-style: none;
            font-size: 1.2rem;
            text-align: left;
            max-width: 400px;
            margin: 0 auto;
        }

            .feature-list li {
                margin-bottom: 15px;
                padding-left: 35px;
                position: relative;
                opacity: 0.9;
            }

                .feature-list li::before {
                    content: '✓';
                    position: absolute;
                    left: 0;
                    color: #a8edea;
                    font-weight: bold;
                    font-size: 1.3em;
                }

        /* Right Side - Login Form */
        .right-panel {
            width: 500px;
            background: #f8f9fa;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 60px 40px;
            position: relative;
            height: 100vh;
            overflow: hidden;
        }

        .login-form-container {
            width: 100%;
            max-width: 400px;
            background: white;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .login-header {
            margin-bottom: 35px;
            text-align: center;
        }

        .login-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 8px;
            letter-spacing: -0.5px;
        }

        .login-subtitle {
            font-size: 0.95rem;
            color: #64748b;
            font-weight: 400;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            color: #555;
            font-weight: 500;
            font-size: 0.9rem;
        }

        .input-wrapper {
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #999;
            font-size: 1.2rem;
        }

        .form-input {
            width: 100%;
            padding: 5px 15px 5px 45px;
            border: 1px solid #ddd;
            border-radius: 6px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: #fafafa;
        }

            .form-input:focus {
                outline: none;
                border-color: #667eea;
                background: white;
                box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            }

                .form-input:focus + .input-icon {
                    color: #667eea;
                }

            .form-input::placeholder {
                color: #aaa;
                font-size: 0.95rem;
            }

        .password-container {
            position: relative;
        }

        .password-toggle {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            color: #666;
            font-size: 1.3rem;
            padding: 5px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: color 0.3s ease;
        }

            .password-toggle:hover {
                color: #667eea;
            }

        .signin-btn {
            width: 100%;
            padding: 5px;
            background: #0ea5e9;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

            .signin-btn:hover {
                background: #0284c7;
                transform: translateY(-1px);
                box-shadow: 0 4px 12px rgba(14, 165, 233, 0.3);
            }

            .signin-btn:active {
                transform: translateY(0);
            }

            .signin-btn i {
                font-size: 1.1rem;
            }

        /* Tablet Responsive */
        @@media (max-width: 1024px) {
            .left-panel

        {
            padding: 30px;
        }

        .welcome-title {
            font-size: 2.5rem;
        }

        .welcome-subtitle {
            font-size: 1.1rem;
        }

        .feature-list {
            font-size: 1.1rem;
        }

        .right-panel {
            width: 450px;
            padding: 40px 30px;
        }

        }

        /* Mobile Responsive */
        @@media (max-width: 768px) {
            body

        {
            flex-direction: column;
            height: 100vh;
            overflow: hidden;
        }

        .left-panel {
            flex: 0 0 auto;
            height: 45vh;
            padding: 30px 20px;
            overflow: hidden;
        }

        .welcome-title {
            font-size: 2rem;
        }

        .welcome-subtitle {
            font-size: 1rem;
            margin-bottom: 20px;
        }

        .feature-list {
            font-size: 0.95rem;
            max-width: 100%;
        }

            .feature-list li {
                margin-bottom: 12px;
                padding-left: 30px;
            }

        .right-panel {
            flex: 1;
            width: 100%;
            height: 55vh;
            padding: 30px 20px;
            margin-top:2px;
            overflow: hidden;
        }

        .login-form-container {
            padding: 30px 25px;
            max-width: 100%;
        }

        .login-title {
            font-size: 1.5rem;
        }

        .login-subtitle {
            font-size: 0.9rem;
        }

        .form-input {
            padding: 5px 13px 5px 40px;
            font-size: 0.95rem;
        }

        .input-icon {
            font-size: 1.1rem;
            left: 13px;
        }

        .signin-btn {
            padding: 10px;
            font-size: 0.95rem;
        }

        }

        /* Small Mobile */
        @@media (max-width: 480px) {
            .left-panel

        {
            padding: 30px 15px;
        }

        .welcome-title {
            font-size: 1.75rem;
        }

        .welcome-subtitle {
            font-size: 0.95rem;
        }

        .feature-list {
            font-size: 0.9rem;
        }

        .right-panel {
            padding: 30px 15px;
        }

        .login-form-container {
            padding: 25px 20px;
        }

        .login-title {
            font-size: 1.35rem;
        }

        }
    </style>
</head>
<body>
    <div class="left-panel">
        <div class="floating-shapes">
            <div class="shape"></div>
            <div class="shape"></div>
            <div class="shape"></div>
        </div>

        <div class="welcome-content">
            <h1 class="welcome-title">Welcome to HRMS</h1>
            <p class="welcome-subtitle">Manage employees, payroll, and performance with Relay Express HRMS.</p>

            <ul class="feature-list">
                <li>Employee Management</li>
                <li>Payroll & Benefits</li>
                <li>Performance Tracking</li>
                <li>Leave Management</li>
                <li>Recruitment & Onboarding</li>
            </ul>
        </div>
    </div>

    <div class="right-panel">
        <div class="login-form-container">
            <div class="login-header">
                <h2 class="login-title">Welcome Back</h2>
                <p class="login-subtitle">Enter your credentials to access your account</p>
            </div>

            <form>
                <div class="form-group">
                    <label class="form-label" for="inputEmailAddress">Email Address<spna class="text-danger">*</spna></label>
                    <div class="input-wrapper">
                        <input type="email" id="inputEmailAddress" class="form-input" placeholder="Email Address" required>
                        <i class='bx bx-envelope input-icon'></i>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label" for="inputChoosePassword">Enter Password<spna class="text-danger">*</spna></label>
                    <div class="input-wrapper password-container">
                        <input type="password" id="inputChoosePassword" class="form-input" placeholder="Enter Password" required>
                        <i class='bx bx-lock-alt input-icon'></i>
                        <button type="button" class="password-toggle" onclick="togglePassword()">
                            <i class='bx bx-hide' id="toggleIcon"></i>
                        </button>
                    </div>
                </div>

            

                <button type="button" class="signin-btn" id="btnLogin">
                    <i class='bx bx-lock-open'></i>
                    <span>Login</span>
                </button>
                <button type="button" class="signin-btn" id="btnLogining" disabled style="display:none;">
                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                    <span>Loging...</span>
                </button>
            </form>
        </div>
    </div>

    <!-- Inject company modal here -->
    <div id="companyModalContainer"></div>
    <div id="sessionLogoutContainer"></div>
    <script>
        var uiBaseUrlLayout='@UIBaseUrl'
        var BaseUrlLayout='@baseUrl';
    </script>


    <!-- JS Dependencies -->
    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/plugins/simplebar/js/simplebar.min.js"></script>
    <script src="~/assets/plugins/metismenu/js/metisMenu.min.js"></script>
    <script src="~/assets/plugins/perfect-scrollbar/js/perfect-scrollbar.js"></script>
    <script src="~/assets/plugins/notifications/js/lobibox.min.js"></script>
    <script src="~/assets/plugins/notifications/js/notifications.min.js"></script>
    <script src="~/assets/plugins/notifications/js/notification-custom-script.js"></script>
    <script src="https://cdn3.devexpress.com/jslib/21.1.5/js/dx.all.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jwt-decode@3.1.2/build/jwt-decode.min.js"></script>
    <script src="~/assets/js/app.js"></script>
    <script src="~/assets/js/companymodalloader.js"></script>

    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const toggleIcon = document.getElementById('toggleIcon');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.className = 'bx bx-show';
            } else {
                passwordInput.type = 'password';
                toggleIcon.className = 'bx bx-hide';
            }
        }



        function showBtnLoder()
        {
            $('#btnLogin').hide();
            $('#btnLogining').show();
        }
        function hideBtnLoder()
        {
            $('#btnLogin').show();
            $('#btnLogining').hide();
        }

        $(document).ready(function () {

             localStorage.removeItem("PreviousPageUrl");
            localStorage.setItem("PreviousPageUrl", window.location.href);
           

            // Trigger login when pressing Enter in input fields
            $('#inputEmailAddress, #inputChoosePassword').keypress(function (e) {
                if (e.which === 13) {
                    $('#btnLogin').click();
                }
            });

            // Handle login button click
            $('#btnLogin').click(function () {
                  showBtnLoder();
                var email = $('#inputEmailAddress').val();
                var password = $('#inputChoosePassword').val();

                if (!email) {
                    round_error_noti("Please enter email!");
                    hideBtnLoder();
                    return false;
                }

                if (!password) {
                    hideBtnLoder();
                    round_error_noti("Please enter password!");
                    return false;
                }

                // Show spinner and disable button
                              


                var formData = {
                    Email: email,
                    Password: password
                };

                $.ajax({
                    url: '@baseUrl/AuthenticationAPI/Login',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    success: function (response) {

                        if (response.isSuccess) {
                            var token = response.data.token;
                            var decoded = jwt_decode(token);
                            var CompanyList = JSON.parse(decoded.Company);
                            var firstCompany = CompanyList[0];

                            localStorage.setItem("authToken", token);
                            localStorage.setItem("EmployeeId", decoded.Id);
                            localStorage.setItem("EmployeeName", decoded.FullName);
                            localStorage.setItem("RoleSlug", decoded.RoleSlug);

                            if (decoded.RoleSlug === "super-admin") {
                                openCompanyModal('@UIBaseUrl', '@baseUrl', CompanyList, function (selectedCompany) {
                                    if (selectedCompany) {
                                        localStorage.setItem('selectedCompany', JSON.stringify(selectedCompany));
                                        window.location.href = '@UIBaseUrl/AdminPanel/Home/index';
                                    } else {
                                        window.location.href = '@UIBaseUrl/AuthManage/Login';
                                    }
                                });
                            }

                            else if (decoded.RoleSlug == "admin")
                            {
                                if(decoded.IsPasswordChange=="False"||!decoded.IsPasswordChange)
                                {
                                    window.location.href = '@UIBaseUrl/AuthManage/ChangePassword';

                                }
                                else{

                                    localStorage.removeItem('selectedCompany');
                                    localStorage.setItem('selectedCompany', JSON.stringify(firstCompany));
                                    window.location.href = '@UIBaseUrl/AdminPanel/Home/index';
                                }
                            }
                            else if (decoded.RoleSlug === "ess") {
                                if(decoded.IsPasswordChange=="False"||!decoded.IsPasswordChange)
                                {

                                    window.location.href = '@UIBaseUrl/AuthManage/ChangePassword';
                                }
                                else{
                                    localStorage.removeItem('selectedCompany');
                                localStorage.setItem('selectedCompany', JSON.stringify(firstCompany));
                                window.location.href = '@UIBaseUrl/EmployeePanel/Home/index';
                                }
                            }
                            else {
                                window.location.href = '@UIBaseUrl/AuthManage/Login';
                            }
                        } else {
                            round_error_noti(response.responseMessage);
                           hideBtnLoder();
                        }
                       hideBtnLoder();
                    },
                    error: function () {
                        round_error_noti("Invalid Login Credentials.");
                       hideBtnLoder();
                    }
                });
            });
        });

        $(document).ready(async function () {
            if(localStorage.getItem("SessionOut")=="true")
            {
                $.ajax({
                    url: uiBaseUrlLayout + '/AdminPanel/PartialView/LoadSessionLogoutModal',
                    type: 'GET',
                    success: function (html) {
                        $('#sessionLogoutContainer').html(html);

                    },
                    error: function () {

                    }
                });
            }
        });
    </script>

  

</body>
</html>









