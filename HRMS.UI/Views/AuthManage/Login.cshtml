@{
    Layout = null;
    string baseUrl = Configuration["BaseUrlSettings:baseUrl"];
    string UIBaseUrl = Configuration["UIBaseUrlSettings:baseUrl"];
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Relay Express - HRMS Login</title>
    <!-- CSS Dependencies -->
    <link rel="stylesheet" href="~/assets/plugins/notifications/css/lobibox.min.css" />
    <link href="~/assets/plugins/simplebar/css/simplebar.css" rel="stylesheet" />
    <link href="~/assets/plugins/perfect-scrollbar/css/perfect-scrollbar.css" rel="stylesheet" />
    <link href="~/assets/plugins/metismenu/css/metisMenu.min.css" rel="stylesheet" />
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/css/bootstrap-extended.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <link href="~/assets/css/app.css" rel="stylesheet">
    <link href="~/assets/css/icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/css/dark-theme.css" />
    <link rel="stylesheet" href="~/assets/css/semi-dark.css" />
    <link rel="stylesheet" href="~/assets/css/header-colors.css" />
    <link rel="stylesheet" href="https://cdn3.devexpress.com/jslib/21.1.5/css/dx.common.css">
    <link rel="stylesheet" href="https://cdn3.devexpress.com/jslib/21.1.5/css/dx.light.css">
    <link href="~/assets/css/company-modal.css" rel="stylesheet" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            min-height: 100vh;
            overflow-x: hidden;
        }

        /* Left Panel (Desktop) */
        .left-panel {
            flex: 1;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: white;
            padding: 40px;
            position: relative;
            overflow: hidden;
            min-height: 100vh;
        }

            .left-panel::before {
                content: '';
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%;
                background: radial-gradient(circle at 20% 80%, rgba(255,255,255,0.1) 0%, transparent 50%);
                animation: float 8s ease-in-out infinite;
                z-index: 1;
            }

            .left-panel::after {
                content: '';
                position: absolute;
                bottom: -150px;
                right: -150px;
                width: 400px;
                height: 400px;
                background: linear-gradient(45deg, rgba(255,255,255,0.05) 50%, transparent 50%);
                border-radius: 50%;
                animation: rotate 12s linear infinite;
                z-index: 1;
            }

        .floating-shapes {
            position: absolute;
            width: 100%;
            height: 100%;
            z-index: 1;
        }

        .shape {
            position: absolute;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            animation: float-shapes 6s ease-in-out infinite;
        }

            .shape:nth-child(1) {
                width: 80px;
                height: 80px;
                top: 20%;
                left: 10%;
                animation-delay: 0s;
            }

            .shape:nth-child(2) {
                width: 120px;
                height: 120px;
                bottom: 30%;
                left: 15%;
                animation-delay: 2s;
            }

            .shape:nth-child(3) {
                width: 60px;
                height: 60px;
                top: 70%;
                right: 20%;
                animation-delay: 4s;
            }

        @@keyframes float {
            0%, 100%

        {
            transform: translate(0, 0) rotate(0deg);
        }

        33% {
            transform: translate(30px, -30px) rotate(120deg);
        }

        66% {
            transform: translate(-20px, 20px) rotate(240deg);
        }

        }

        @@keyframes rotate {
            0%

        {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }

        }

        @@keyframes float-shapes {
            0%, 100%

        {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-20px);
        }

        }

        .welcome-content {
            position: relative;
            z-index: 2;
            max-width: 600px;
        }

        .welcome-title {
            font-size: 2.5rem;
            font-weight: 600;
            margin-bottom: 20px;
            line-height: 1.2;
            text-shadow: 0 2px 8px rgba(0,0,0,0.25);
        }

        .welcome-subtitle {
            opacity: 0.95;
            margin-bottom: 30px;
            line-height: 1.5;
            font-size: 1.1rem;
        }

        .feature-list {
            list-style: none;
            font-size: 1.1rem;
            text-align: left;
            max-width: 400px;
            margin: 0 auto;
        }

            .feature-list li {
                margin-bottom: 15px;
                padding-left: 35px;
                position: relative;
                opacity: 0.9;
            }

                .feature-list li::before {
                    content: '✓';
                    position: absolute;
                    left: 0;
                    color: #a8edea;
                    font-weight: bold;
                    font-size: 1.3em;
                }

        /* Right Panel (Form) */
        .right-panel {
            width: 500px;
            background: #e8eef3;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 60px 40px;
            position: relative;
            min-height: 100vh;
        }

            .right-panel::after {
                content: '';
                position: absolute;
                top: -100px;
                left: -100px;
                width: 300px;
                height: 300px;
                background: linear-gradient(45deg, rgba(14, 165, 233, 0.12) 50%, transparent 50%);
                border-radius: 50%;
                animation: rotate-right 15s linear infinite;
                z-index: 1;
            }

        @@keyframes float-right {
            0%, 100%

        {
            transform: translate(0, 0) rotate(0deg);
        }

        33% {
            transform: translate(-20px, 20px) rotate(120deg);
        }

        66% {
            transform: translate(30px, -30px) rotate(240deg);
        }

        }

        @@keyframes rotate-right {
            0%

        {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(-360deg);
        }

        }

        .right-floating-shapes {
            position: absolute;
            width: 100%;
            height: 100%;
            z-index: 1;
            pointer-events: none;
        }

        .right-shape {
            position: absolute;
            background: rgba(14, 165, 233, 0.12);
            border-radius: 50%;
            animation: float-right-shapes 7s ease-in-out infinite;
        }

            .right-shape:nth-child(1) {
                width: 60px;
                height: 60px;
                top: 15%;
                right: 10%;
                animation-delay: 0s;
            }

        @@keyframes float-right-shapes {
            0%, 100%

        {
            transform: translateY(0px) translateX(0px);
        }

        50% {
            transform: translateY(-25px) translateX(15px);
        }

        }

        .login-form-container {
            width: 100%;
            max-width: 400px;
            background: white;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            position: relative;
            z-index: 2;
        }

        .login-title {
            font-size: 1.8rem;
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 8px;
        }

        .login-subtitle {
            color: #64748b;
            margin-bottom: 30px;
            font-size: 0.95rem;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            color: #555;
            font-weight: 500;
            font-size: 0.95rem;
        }

        .input-wrapper {
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #999;
            font-size: 1.2rem;
        }

        .form-input {
            width: 100%;
            padding: 12px 15px 12px 45px;
            border: 1px solid #ddd;
            border-radius: 6px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: #fafafa;
        }

            .form-input:focus {
                outline: none;
                border-color: #667eea;
                background: white;
                box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            }

        .password-toggle {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            color: #666;
            font-size: 1.3rem;
            padding: 5px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .signin-btn {
            width: 100%;
            padding: 14px;
            background: #0ea5e9;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            margin-top: 10px;
        }

            .signin-btn:hover:not(:disabled) {
                background: #0284c7;
                transform: translateY(-1px);
            }

            .signin-btn:disabled {
                opacity: 0.7;
                cursor: not-allowed;
            }

        /* Tablet (768px - 1024px) */
        @@media (max-width: 1024px) and (min-width: 769px) {
            .left-panel

        {
            padding: 30px;
        }

        .welcome-title {
            font-size: 2.2rem;
        }

        .welcome-subtitle {
            font-size: 1rem;
        }

        .feature-list {
            font-size: 1rem;
        }

        .right-panel {
            width: 450px;
            padding: 40px 30px;
        }

        }

        /* Mobile and Tablet Portrait (≤ 768px) */
        @@media (max-width: 768px) {
            body

        {
            flex-direction: column;
            min-height: 100vh;
        }

        .left-panel {
            min-height: auto;
            height: auto;
            padding: 40px 20px;
            flex: none;
        }

        .welcome-title {
            font-size: 1.8rem;
            margin-bottom: 15px;
        }

        .welcome-subtitle {
            font-size: 0.95rem;
            margin-bottom: 20px;
        }

        .feature-list {
            font-size: 0.9rem;
            max-width: 100%;
        }

            .feature-list li {
                margin-bottom: 12px;
                padding-left: 30px;
            }

        .right-panel {
            width: 100%;
            min-height: auto;
            height: auto;
            padding: 40px 20px;
            flex: 1;
            display: flex;
            align-items: flex-start;
            padding-top: 30px;
        }

        .login-form-container {
            padding: 30px 25px;
            max-width: 100%;
            width: 100%;
        }

        .login-title {
            font-size: 1.5rem;
        }

        .login-subtitle {
            font-size: 0.9rem;
            margin-bottom: 25px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-input {
            padding: 11px 13px 11px 40px;
            font-size: 0.95rem;
        }

        .input-icon {
            left: 13px;
            font-size: 1.1rem;
        }

        .signin-btn {
            padding: 12px;
            font-size: 0.95rem;
        }

        .shape {
            display: none;
        }

        .right-shape {
            display: none;
        }

        }

        /* Small Mobile (≤ 480px) */
        @@media (max-width: 480px) {
            .left-panel

        {
            padding: 30px 15px;
        }

        .welcome-title {
            font-size: 1.6rem;
        }

        .welcome-subtitle {
            font-size: 0.9rem;
        }

        .feature-list {
            font-size: 0.85rem;
        }

            .feature-list li {
                margin-bottom: 10px;
                padding-left: 28px;
            }

        .right-panel {
            padding: 30px 15px;
        }

        .login-form-container {
            padding: 25px 20px;
        }

        .login-title {
            font-size: 1.4rem;
        }

        .form-label {
            font-size: 0.9rem;
        }

        .form-input {
            padding: 10px 12px 10px 38px;
            font-size: 0.9rem;
        }

        .input-icon {
            left: 12px;
            font-size: 1rem;
        }

        .password-toggle {
            right: 12px;
            font-size: 1.2rem;
        }

        .signin-btn {
            padding: 11px;
            font-size: 0.9rem;
        }

        }

        /* Extra Small Mobile (≤ 360px) */
        @@media (max-width: 360px) {
            .left-panel

        {
            padding: 25px 12px;
        }

        .welcome-title {
            font-size: 1.4rem;
        }

        .welcome-subtitle {
            font-size: 0.85rem;
        }

        .feature-list {
            font-size: 0.8rem;
        }

        .right-panel {
            padding: 25px 12px;
        }

        .login-form-container {
            padding: 20px 15px;
        }

        .login-title {
            font-size: 1.3rem;
        }

        .login-subtitle {
            font-size: 0.85rem;
        }

        }

        /* Landscape Mobile */
        @@media (max-height: 500px) and (orientation: landscape) {
            body

        {
            flex-direction: row;
        }

        .left-panel {
            width: 40%;
            min-height: 100vh;
            padding: 20px;
        }

        .welcome-title {
            font-size: 1.5rem;
        }

        .welcome-subtitle {
            font-size: 0.85rem;
            margin-bottom: 15px;
        }

        .feature-list {
            font-size: 0.85rem;
        }

            .feature-list li {
                margin-bottom: 8px;
            }

        .right-panel {
            width: 60%;
            min-height: 100vh;
            padding: 20px;
        }

        .login-form-container {
            padding: 20px;
        }

        .login-title {
            font-size: 1.3rem;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .signin-btn {
            padding: 10px;
        }

        }
    </style>
</head>
<body>
    <div class="left-panel">
        <div class="floating-shapes">
            <div class="shape"></div>
            <div class="shape"></div>
            <div class="shape"></div>
        </div>
        <div class="welcome-content">
            <h1 class="welcome-title">Welcome to HRMS</h1>
            <p class="welcome-subtitle">Manage employees, payroll, and performance with Relay Express HRMS.</p>
            <ul class="feature-list">
                <li>Employee Management</li>
                <li>Payroll & Benefits</li>
                <li>Performance Tracking</li>
                <li>Leave Management</li>
                <li>Recruitment & Onboarding</li>
            </ul>
        </div>
    </div>

    <div class="right-panel">
        <div class="right-floating-shapes">
            <div class="right-shape"></div>
            <div class="right-shape"></div>
            <div class="right-shape"></div>
        </div>
        <div class="login-form-container">
            <div class="login-header">
                <h2 class="login-title">Welcome Back</h2>
                <p class="login-subtitle">Enter your credentials to access your account</p>
            </div>
            <form>
                <div class="form-group">
                    <label class="form-label" for="inputEmailAddress">
                        Email Address<span class="text-danger">*</span>
                    </label>
                    <div class="input-wrapper">
                        <i class='bx bx-envelope input-icon'></i>
                        <input type="email" id="inputEmailAddress" class="form-input" placeholder="Email Address" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label" for="inputChoosePassword">
                        Enter Password<span class="text-danger">*</span>
                    </label>
                    <div class="input-wrapper password-container">
                        <i class='bx bx-lock-alt input-icon'></i>
                        <input type="password" id="inputChoosePassword" class="form-input" placeholder="Enter Password" required>
                        <button type="button" class="password-toggle" onclick="togglePassword()">
                            <i class='bx bx-hide' id="toggleIcon"></i>
                        </button>
                    </div>
                </div>
                <button type="button" class="signin-btn" id="btnLogin">
                    <i class='bx bx-lock-open'></i>
                    <span>Login</span>
                </button>
                <button type="button" class="signin-btn" id="btnLogining" disabled style="display:none;">
                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                    <span>Login...</span>
                </button>
            </form>
        </div>
    </div>

    <!-- Inject company modal here -->
    <div id="companyModalContainer"></div>
    <div id="sessionLogoutContainer"></div>
    <script>
        var uiBaseUrlLayout='@UIBaseUrl'
        var BaseUrlLayout='@baseUrl';
    </script>

    <!-- JS Dependencies -->
    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/plugins/simplebar/js/simplebar.min.js"></script>
    <script src="~/assets/plugins/metismenu/js/metisMenu.min.js"></script>
    <script src="~/assets/plugins/perfect-scrollbar/js/perfect-scrollbar.js"></script>
    <script src="~/assets/plugins/notifications/js/lobibox.min.js"></script>
    <script src="~/assets/plugins/notifications/js/notifications.min.js"></script>
    <script src="~/assets/plugins/notifications/js/notification-custom-script.js"></script>
    <script src="https://cdn3.devexpress.com/jslib/21.1.5/js/dx.all.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jwt-decode@3.1.2/build/jwt-decode.min.js"></script>
    <script src="~/assets/js/app.js"></script>
    <script src="~/assets/js/companymodalloader.js"></script>

    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('inputChoosePassword');
            const toggleIcon = document.getElementById('toggleIcon');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.className = 'bx bx-show';
            } else {
                passwordInput.type = 'password';
                toggleIcon.className = 'bx bx-hide';
            }
        }

        function showBtnLoder() {
            $('#btnLogin').hide();
            $('#btnLogining').show();
        }

        function hideBtnLoder() {
            $('#btnLogin').show();
            $('#btnLogining').hide();
        }

        $(document).ready(function () {
            localStorage.removeItem("PreviousPageUrl");
            localStorage.setItem("PreviousPageUrl", window.location.href);

            // Trigger login when pressing Enter in input fields
            $('#inputEmailAddress, #inputChoosePassword').keypress(function (e) {
                if (e.which === 13) {
                    $('#btnLogin').click();
                }
            });

            // Handle login button click
            $('#btnLogin').click(function () {
                showBtnLoder();
                var email = $('#inputEmailAddress').val();
                var password = $('#inputChoosePassword').val();

                if (!email) {
                    round_error_noti("Please enter email!");
                    hideBtnLoder();
                    return false;
                }

                if (!password) {
                    hideBtnLoder();
                    round_error_noti("Please enter password!");
                    return false;
                }

                var formData = {
                    Email: email,
                    Password: password
                };

                $.ajax({
                    url: '@baseUrl/AuthenticationAPI/Login',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    success: function (response) {
                        if (response.isSuccess) {
                            var token = response.data.token;
                            var decoded = jwt_decode(token);
                            var CompanyList = JSON.parse(decoded.Company);
                            var firstCompany = CompanyList[0];

                            localStorage.setItem("authToken", token);
                            localStorage.setItem("EmployeeId", decoded.Id);
                            localStorage.setItem("EmployeeName", decoded.FullName);
                            localStorage.setItem("RoleSlug", decoded.RoleSlug);
                            localStorage.removeItem('compOffLeaveShown');
                              localStorage.setItem('compOffLeaveShown', 'true');

                            if (decoded.RoleSlug === "super-admin") {
                                openCompanyModal('@UIBaseUrl', '@baseUrl', CompanyList, function (selectedCompany) {
                                    if (selectedCompany) {
                                        localStorage.setItem('selectedCompany', JSON.stringify(selectedCompany));
                                        window.location.href = '@UIBaseUrl/AdminPanel/Home/index';
                                    } else {
                                        window.location.href = '@UIBaseUrl/AuthManage/Login';
                                    }
                                });
                            }
                            else if (decoded.RoleSlug == "admin") {
                                if(decoded.IsPasswordChange=="False"||!decoded.IsPasswordChange) {
                                    window.location.href = '@UIBaseUrl/AuthManage/ChangePassword';
                                }
                                else {
                                    localStorage.removeItem('selectedCompany');
                                    localStorage.setItem('selectedCompany', JSON.stringify(firstCompany));
                                    window.location.href = '@UIBaseUrl/AdminPanel/Home/index';
                                }
                            }
                            else if (decoded.RoleSlug === "ess") {
                                if(decoded.IsPasswordChange=="False"||!decoded.IsPasswordChange) {
                                    window.location.href = '@UIBaseUrl/AuthManage/ChangePassword';
                                }
                                else {
                                    localStorage.removeItem('selectedCompany');
                                    localStorage.setItem('selectedCompany', JSON.stringify(firstCompany));
                                    window.location.href = '@UIBaseUrl/EmployeePanel/Home/index';
                                }
                            }
                            else {
                                window.location.href = '@UIBaseUrl/AuthManage/Login';
                            }
                        } else {
                            round_error_noti(response.responseMessage);
                            hideBtnLoder();
                        }
                        hideBtnLoder();
                    },
                    error: function () {
                        round_error_noti("Invalid Login Credentials.");
                        hideBtnLoder();
                    }
                });
            });
        });

        $(document).ready(async function () {
            if(sessionStorage.getItem("SessionOut")=="true") {
                $.ajax({
                    url: uiBaseUrlLayout + '/AdminPanel/PartialView/LoadSessionLogoutModal',
                    type: 'GET',
                    success: function (html) {
                        $('#sessionLogoutContainer').html(html);
                          sessionStorage.removeItem("SessionOut");

                    },
                    error: function () {
                    }
                });
            }
        });
    </script>
</body>
</html>