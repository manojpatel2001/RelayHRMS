@{
    ViewData["Title"] = "Employee Panel";
    Layout = "~/Areas/EmployeePanel/Views/Shared/_EmployeeLayout.cshtml";
    string baseUrl = ViewBag.BaseUrl;
    string apiBase = ViewBag.BaseUrlAPI;
}

<link href="~/commoncss.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>
    .fixed-label {
        min-width: 220px;
        white-space: nowrap;
        margin-bottom: 0;
        text-align: right;
        padding-right: 25px;
    }
</style>

<div class="card">
    <div class="card-header bg-transparent ml-0 py-0">
        <div class="row">
            <div class="col-6">
                <h4 class="pt-2 mb-0">Leave</h4>
            </div>
        </div>

        <div class="card mt-2">
            <div class="card-header bg-transparent">
                <div class="row align-items-center">
                    <div class="col">
                        <h6 class="mb-0">Search Panel</h6>
                    </div>
                    <div class="col-auto">
                        <a href="@Url.Action("AddLeave", "Leave", new { area = "EmployeePanel" })" class="btn btn-primary">Add</a>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <form>
                    <div class="row justify-content-center">
                        <div class="col-md-10">
                            <!-- Search By & Search For -->
                            <div class="row mb-3">
                                <div class="col-md-6 d-flex align-items-center">
                                    <label for="Leavetypeid" class="fixed-label">Leave Type:</label>
                                    <select class="form-control form-control-sm" id="Leavetypeid">
                                        <option value="0">-- Select --</option>
                                    </select>
                                </div>
                                <div class="col-md-6 d-flex align-items-center">
                                    <label for="input1" class="fixed-label">Search For:</label>
                                    <input type="text" class="form-control form-control-sm" id="input1" placeholder="Enter Leave Type">
                                </div>
                            </div>

                            <!-- Status & Buttons -->
                            <div class="row mb-3">
                                <div class="col d-flex align-items-center justify-content-center flex-wrap gap-3">
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="leaveStatus" id="pendingleaveid" value="Pending" checked>
                                        <label class="form-check-label" for="pendingleaveid">Pending</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="leaveStatus" id="Approveid" value="ApprovedRejected">
                                        <label class="form-check-label" for="Approveid">Approved/Rejected</label>
                                    </div>

                                    <button type="button" class="btn btn-primary btn-sm" id="gobutoonid">GO</button>
                                    <button type="button" class="btn btn-secondary btn-sm" id="clearbuttonid">Clear</button>
                                </div>
                            </div>

                        </div>
                    </div>
                </form>

                <!-- Table -->
                <div class="table-responsive px-3 pb-3">
                    <table class="table table-bordered" id="leaveTable">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Employee Name</th>
                                <th>Reporting Person</th>
                                <th>From Date</th>
                                <th>To Date</th>
                                <th>No. of Days</th>
                                <th>Reason</th>
                                <th>Application Type</th>
                                <th>Leave Status</th>
                            </tr>
                        </thead>
                       <tbody id="resultBody">
                        <tr><td colspan="8">No records found.</td></tr>
                    </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Script -->
<script>
    const apiBase = '@apiBase';

    $(document).ready(function () {
         fetchLeaveData();
         loadSearchByOptions();
        // Trigger on GO button
        $('#gobutoonid').on('click', function () {
            fetchLeaveData();
        });

        // Trigger on radio button change
        $('input[name="leaveStatus"]').on('change', function () {
            fetchLeaveData();
        });

        // Clear button
        $('#clearbuttonid').on('click', function () {
            $('#Leavetypeid').val('');
            $('#input1').val('');
            $('input[name="leaveStatus"]').prop('checked', false);
            $('#resultBody').empty().append('<tr><td colspan="10" class="text-center">No records found.</td></tr>');
        });

            function loadSearchByOptions() {
            debugger;
          
         $.ajax({
            url: apiBase + '/LeaveMasterAPI/LeaveType',
            type: "GET",
            success: function (res) {
                console.log("res", res); // ✅ See actual property names
                const dropdown = $('#Leavetypeid');
                dropdown.empty().append(`<option value="0">-- Select --</option>`);

                if (res.isSuccess && res.data) {
                    $.each(res.data, function (i, item) {
                        console.log(item); // ✅ Confirm key names
                        // Use the correct key names from actual data
                        dropdown.append(`<option value="${item.leavetypeid}">${item.leaveName}</option>`);
                    });
                }
            },
            error: function () {
                console.error("Failed to load leave type options.");
            }
        });

    }
        // Main AJAX function
        function fetchLeaveData() {
            


            let filter = {
                    LeaveType: $('#Leavetypeid').val() || null,    // string like "1"
                    Status: $('input[name="leaveStatus"]:checked').val() || null
            };

            
            $.ajax({
                url: apiBase + '/LeaveApplication/GetLeaveApplications',
                method: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(filter),
                success: function (res) {
                    const $tbody = $('#resultBody');
                    $tbody.empty();
                    console.log(res,"res");

                    if (res.isSuccess && res.data && res.data.length > 0) {
                        res.data.forEach((item, i) => {
                            const row = `
                                <tr>
                                    <td>${i + 1}</td>
                                    <td>${item.employeeName || ''}</td>
                                    <td>${item.reportingPersonName || ''}</td>                                    
                                    <td>${item.fromDate ? item.fromDate.split('T')[0] : ''}</td>
                                    <td>${item.todate ? item.todate.split('T')[0] : ''}</td>
                                    <td>${item.no_Of_Date || ''}</td>
                                    <td>${item.reason || ''}</td>
                                    <td>${item.applicationType || ''}</td>
                                    <td>${item.leaveStatus || ''}</td>
                                </tr>`;
                            $tbody.append(row);
                        });
                    } else {
                        $tbody.append('<tr><td colspan="10" class="text-center text-danger">No records found.</td></tr>');
                    }
                },
                error: function (xhr) {
                    console.error("AJAX error:", xhr);
                    Swal.fire("❌ Server Error", xhr.responseText || "Something went wrong", "error");
                }
            });
        }
    });
</script>
