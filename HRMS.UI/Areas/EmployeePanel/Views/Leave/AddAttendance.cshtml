                    minWidth: 100
                },
                {
                    dataField: "monthDay",
                    caption: "Day",
                    allowEditing: false,
                    width: 100,
                    minWidth: 100
                },
                {
                    dataField: "fullName",
                    caption: "Employee",
                    allowEditing: false,
                    minWidth: 120
                },
                {
                    dataField: "branchName",
                    caption: "Branch",
                    allowEditing: false,
                    minWidth: 100
                },
                {
                    dataField: "shiftTime",
                    caption: "Shift Time",
                    allowEditing: false,
                    minWidth: 120
                },
                {
                    dataField: "inTime",
                    caption: "In Time",
                    minWidth: 80,
                    cellTemplate: function(container, options) {
                        const value = options.data.inTime && options.data.inTime !== "-"
                            ? new Date(options.data.inTime).toLocaleTimeString('en-GB', {
                                hour: '2-digit',
                                minute: '2-digit'
                            })
