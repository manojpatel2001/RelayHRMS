<!-- Delete Button + Grid Container -->
<div class="container mt-3">
    <!-- Action Buttons Row -->
    <div id="actionButtons" class="custom-action-buttons text-end mb-2" style="display: none;">
        <button id="btnDelete" class="btn btn-custom">Delete</button>
        <button id="btnApprove" class="btn btn-custom">Approve</button>
        <button id="btnReject" class="btn btn-custom">Reject</button>
    </div>

    <!--Loader-->
    <div id="grid-loader"
         class="grid-loader justify-content-center align-items-center flex-column"
         style="display: none; position: fixed; top: 0; left: 0; width: 100vw; height: 100vh;
            background: rgba(255, 255, 255, 0.6); backdrop-filter: blur(3px); z-index: 9999;">
        <img src="@baseDomainUrl/loders/loder.png"
             class="grid-logo-spinner"
             style="width: 40px; height: 40px; animation: spin 1s linear infinite;" />
        <div class="grid-loading-text text-dark" style="font-size: 16px;">Loading...</div>
    </div>

    <!-- Grid Container with proper width -->
    <div class="grid-container">
        <div id="attendanceGrid"></div>
    </div>
</div>

<script>
    const EmployeeId = localStorage.getItem('EmployeeId');
    const apiBase = '@apiBase';

    // Safe grid disposal function
    function safeDisposeGrid() {
        try {
            var gridInstance = $("#attendanceGrid").data("dxDataGrid");
            if (gridInstance) {
                gridInstance.dispose();
            }
        } catch (e) {
            // Grid doesn't exist, continue
        }
        $("#attendanceGrid").empty();
    }

    $(document).ready(function () {
        $('#r2').prop('checked', true); // Default to Pending
        $('#btnGo').click(); // Trigger initial load

        $("#btnApprove").click(function () {
            updateAttendanceStatus("Approved");
        });

        $("#btnReject").click(function () {
            updateAttendanceStatus("Rejected");
        });
    });

    let selectedKeys = [];

    // Get selected status from radio buttons
    function getStatus() {
        if ($('#r2').is(':checked')) return 'Pending';
        if ($('#r3').is(':checked')) return 'Approved';
        if ($('#r4').is(':checked')) return 'Rejected';
        return null;
    }

    // Map dropdown value to parameter
    function getSearchByText(value) {
        switch (value) {
            case '1': return 'EmpName';
            case '2': return 'EmpCode';
            case '3': return 'Reason';
            case '4': return 'ManagerName';
            default: return null;
        }
    }

    function goBack() {
        window.location.href = '@UIBaseUrl/EmployeePanel/Home/index';
    }

    async function showLoder() {
        $('#grid-loader').addClass('d-flex').show();
    }

    async function hideLoder() {
        $('#grid-loader').removeClass('d-flex').hide();
    }

    function loadGrid(data) {
        // Safely dispose existing grid if it exists
        try {
            var gridInstance = $("#attendanceGrid").data("dxDataGrid");
            if (gridInstance) {
                gridInstance.dispose();
            }
        } catch (e) {
            // Grid doesn't exist, continue
        }

        // Clear the container
        $("#attendanceGrid").empty();

        $("#attendanceGrid").dxDataGrid({
            dataSource: data,
            keyExpr: "attendanceRegularizationId",
            width: "100%",
            height: 400,
            columnAutoWidth: false,
            wordWrapEnabled: true,
            showBorders: true,
            rowAlternationEnabled: true,
            selection: {
                mode: "multiple",
                showCheckBoxesMode: "always"
            },
           paging: {  enabled: false  },
            scrolling: {
              mode: "standard",
             useNative: true,
               showScrollbar: "always"   },
            columnResizingMode: "widget",
            allowColumnResizing: true,
            onSelectionChanged: function (e) {
                selectedKeys = e.selectedRowKeys;
            },
            onContentReady: function(e) {
                e.component.updateDimensions();
            },
            columns: [
                { dataField: "employeeCode", caption: "Code", width: "8%", minWidth: 80 },
                { dataField: "empId", visible: false },
                { dataField: "fullName", caption: "Name", width: "15%", minWidth: 120 },
                { dataField: "forDate", caption: "Date", dataType: "date", format: "dd/MM/yyyy", width: "10%", minWidth: 100 },
                { dataField: "createdDate", caption: "App Date", dataType: "date", format: "dd/MM/yyyy", width: "10%", minWidth: 100 },
                { dataField: "inTime", caption: "In Time", dataType: "datetime", format: "dd/MM/yyyy HH:mm", width: "15%", minWidth: 140 },
                { dataField: "outTime", caption: "Out Time", dataType: "datetime", format: "dd/MM/yyyy HH:mm", width: "15%", minWidth: 140 },
                { dataField: "duration", caption: "Duration", dataType: "string", width: "10%", minWidth: 100 },
                { dataField: "day", caption: "Day", dataType: "string", width: "10%", minWidth: 100 },
                {
                    caption: "Status",
                    width: "7%",
                    minWidth: 80,
                    calculateCellValue: function (row) {
                        if (row.isApproved) return "Approved";
                        if (row.isRejected) return "Rejected";
                        if (row.isPending) return "Pending";
                        return "";
                    }
                },
                   {
                        dataField: "updatedBy",
                        caption: "Approved By",
                        width: 120,
                        calculateCellValue: function(rowData) {
                            return rowData.updatedBy ? rowData.updatedBy : "-";
                        }
                    },
                    {
                        dataField: "updatedDate",
                        caption: "Approved Date",
                        dataType: "datetime",
                        format: "dd/MM/yyyy HH:mm",
                        width: 140,
                        calculateCellValue: function(rowData) {
                            return rowData.updatedDate ? rowData.updatedDate : "-";
                        }
                    }

            ]
        });
    }

    $('#btnGo').on('click', function () {
        let model = {
            SearchBy: getSearchByText($('#searchby').val()),
            SearchValue: $('#searchfor').val(),
            FromDate: $('#fromdate').val() || null,
            ToDate: $('#todate').val() || null,
            Status: getStatus(),
            LoggedInUserId: EmployeeId
        };

        $.ajax({
            url: apiBase + "/AttendanceRegularizationAPI/GetAttendanceRegularization",
            type: 'POST',
            data: JSON.stringify(model),
            contentType: 'application/json',
          success: function (res) {
       
        if (res.isSuccess) {
            if (res.data && res.data.length > 0) {
                loadGrid(res.data);

                // Check if at least one record has isReportingManager: true
                const hasReportingManager = res.data.some(item => item.isReportingManager);
                if (hasReportingManager) {
                    $("#actionButtons").show();
                } else {
                    $("#actionButtons").hide();
                }
            } else {
                $("#actionButtons").hide();
                safeDisposeGrid();
                round_error_noti('No Data Found');
            }
        } else {
            $("#actionButtons").hide();
            safeDisposeGrid();
            round_error_noti(res.responseMessage || 'No Data');
        }
    },

            error: function () {
                $("#actionButtons").hide();
                // Safe grid disposal
                safeDisposeGrid();
                round_error_noti('Error loading data');
            }
        });
    });

    $('#btnDelete').on('click', function () {
        var grid = $("#attendanceGrid").dxDataGrid("instance");
        var selectedIds = grid.getSelectedRowKeys();

        if (selectedIds.length === 0) {
            round_error_noti('Please select records to delete.');
            return;
        }

        showLoder();
        const deletePayload = {
            Id: selectedIds,
            DeletedBy: ""
        };

        $.ajax({
            url: apiBase + "/AttendanceRegularizationAPI/Delete",
            type: 'DELETE',
            contentType: 'application/json',
            data: JSON.stringify(deletePayload),
            success: function (res) {
                if (res.isSuccess) {
                    round_success_noti(res.responseMessage || "Deleted successfully.");
                    selectedIds.forEach(function (key) {
                        grid.deleteRow(grid.getRowIndexByKey(key));
                    });

                    // Check if grid has remaining data after deletion
                    var currentDataSource = grid.option("dataSource");
                    if (currentDataSource && currentDataSource.length > 0) {
                        // Keep buttons visible if there's still data
                        $("#actionButtons").show();
                    } else {
                        // Hide buttons if no data remains
                        $("#actionButtons").hide();
                    }
                } else {
                    round_error_noti(res.responseMessage || "Deletion failed.");
                }
            },
            error: function () {
                round_error_noti("Something went wrong during deletion.");
            },
            complete: function () {
                hideLoder();
            }
        });
    });

    function updateAttendanceStatus(status) {
        var grid = $("#attendanceGrid").dxDataGrid("instance");
        var selectedRows = grid.getSelectedRowsData();

        if (selectedRows.length === 0) {
            round_error_noti("Please select at least one record.");
            return;
        }

        if (status === "Rejected") {
            const approvedRecords = selectedRows.filter(row => row.isApproved);
            if (approvedRecords.length > 0) {
                Swal.fire({
                    title: "Not Allowed",
                    text: "Approved records cannot be rejected.",
                    icon: "error",
                    customClass: {
                        popup: 'swal-small'
                    }
                });
                return;
            }
        }

        if (status === "Approved") {
            const approvedRecords = selectedRows.filter(row => row.isApproved);
            if (approvedRecords.length > 0) {
                Swal.fire({
                    title: "Not Allowed",
                    text: "Already Approved.",
                    icon: "error",
                    customClass: {
                        popup: 'swal-small'
                    }
                });
                return;
            }
        }

        if (status === "Rejected") {
            const rejectedRecords = selectedRows.filter(row => row.isRejected);
            if (rejectedRecords.length > 0) {
                Swal.fire({
                    title: "Not Allowed",
                    text: "Already Rejected.",
                    icon: "error",
                    customClass: {
                        popup: 'swal-small'
                    }
                });
                return;
            }
        }

        selectedRows.forEach(function (row) {
            row.status = status;
            row.createdBy = EmployeeId;
        });

        showLoder();
        $.ajax({
            url: apiBase + "/AttendanceRegularizationAPI/UpdateAttendanceRegularization",
            type: "PUT",
            data: JSON.stringify(selectedRows),
            contentType: "application/json",
            success: function (response) {
                hideLoder();
                if (response.isSuccess) {
                    round_success_noti(response.responseMessage || "Status updated successfully.");

                    // Reload the grid with current search criteria instead of hiding buttons
                    $('#btnGo').click();
                } else {
                    round_error_noti(response.responseMessage || "Update failed.");
                }
            },
            error: function () {
                hideLoder();
                round_error_noti("Something went wrong during update.");
            }
        });
    }

    $("#btnClear").click(function () {
        // Reset form
        $('#searchby').val("1");
        $('#searchfor').val('');
        $('#fromdate').val('');
        $('#todate').val('');
        $("input[name='type']").prop('checked', false);
        $('#r2').prop('checked', true);

        // Safe grid disposal and hide buttons
        safeDisposeGrid();
        $("#actionButtons").hide();
    });

    // Handle window resize
    $(window).on('resize', function() {
        var gridInstance = $("#attendanceGrid").data("dxDataGrid");
        if (gridInstance) {
            setTimeout(function() {
                gridInstance.updateDimensions();
            }, 100);
        }
    });
</script>