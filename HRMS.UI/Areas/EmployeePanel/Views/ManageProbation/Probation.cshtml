                function formatDateForExcel(dateString) {
            if (!dateString) return '';
            const date = new Date(dateString);
            const day = String(date.getDate()).padStart(2, '0');
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const year = date.getFullYear();
            return `${day}-${month}-${year}`;
        }

        function exportToExcel() {
            if (!gridInstance) {
                alert('Grid not initialized');
                return;
            }

            const selectedRows = gridInstance.getSelectedRowsData();

            if (selectedRows.length === 0) {
                alert('Please select at least one row to export');
                return;
            }

            // Create workbook
            const wb = XLSX.utils.book_new();

            // Prepare data for export
            const exportData = selectedRows.map(row => ({
                'Employee Code': row.employeeCode || '',
                'Full Name': row.fullName || '',
                'Branch Name': row.branchName || '',
                'Date of Joining': row.dateOfJoining ? formatDateForExcel(row.dateOfJoining) : '',
                'Probation End Date': row.probationEndDate ? formatDateForExcel(row.probationEndDate) : '',
                'Extended In Days': row.extendedInDays || '',
                'Review Type': row.reviewType || ''
            }));

            // Convert to worksheet
            const ws = XLSX.utils.json_to_sheet(exportData);

            // Set column widths
            ws['!cols'] = [
                { wch: 15 }, // Employee Code
                { wch: 25 }, // Full Name
                { wch: 20 }, // Branch Name
                { wch: 18 }, // Date of Joining
                { wch: 20 }, // Probation End Date
                { wch: 18 }, // Extended In Days
                { wch: 15 }  // Review Type
            ];

     
            XLSX.utils.book_append_sheet(wb, ws, 'Probation Data');

            const fileName = `Probation_Export_${new Date().toISOString().split('T')[0]}.xlsx`;

            XLSX.writeFile(wb, fileName);
        }
