@{
    ViewData["Title"] = "Shift Changes Details";
    Layout = "~/Areas/EmployeePanel/Views/Shared/_EmployeeLayout.cshtml";
    string baseUrl = ViewBag.BaseUrl;
}
<link href="~/commoncss.css" rel="stylesheet" />

<style>
    .fixed-label {
        min-width: 180px;
        white-space: nowrap;
        margin-bottom: 0;
        text-align: right;
    }
</style>

<div class="card">
    <div class="card-header bg-transparent py-2">
        <div class="row">
            <div class="col-6">
                <h4 class="mb-0">Shift Changes Details</h4>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-transparent">
            <div class="row align-items-center">
                <div class="col">
                    <h6 class="mb-0">Search Panel</h6>
                </div>
            </div>
        </div>

        <div class="card-body">
            <form>
                <div class="col-md-8 mx-auto">

                    <!-- Radio Buttons -->
                    <div class="row mb-3 justify-content-center">
                        <div class="col-md-4 d-flex justify-content-center gap-4">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="Status" id="weelyid" checked>
                                <label class="form-check-label" for="weelyid">Weekly</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="Status" id="monthlyid">
                                <label class="form-check-label" for="monthlyid">Monthly</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="Status" id="assignid">
                                <label class="form-check-label" for="assignid">Assign/Cancel Weekoff</label>
                            </div>
                        </div>
                    </div>

                    <!-- Weekly Section -->
                    <div id="weekly-section" style="display:block;">
                        <div class="row mb-3 justify-content-center">
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="fromdateid" class="fixed-label">Form Date:</label>
                                <input type="date" class="form-control form-control-sm" id="fromdateid" />
                            </div>
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="empid-weekly" class="fixed-label">Employee<span class="text-danger">*</span>:</label>
                                <select class="form-control form-control-sm" id="empid-weekly">
                                    <option value="0">--Select Employee--</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mb-3 justify-content-center">
                            <div class="col-md-6 text-center">
                                <button type="button" class="btn btn-primary btn-sm me-2">GO</button>
                                <button type="button" class="btn btn-secondary btn-sm">Clear</button>
                            </div>
                        </div>
                    </div>

                    <!-- Monthly Section -->
                    <div id="monthly-section" style="display:none;">
                        <div class="row mb-3">
                            <div class="col-md-2"></div>
                            <div class="col-md-4">
                                <div class="form-group position-relative">
                                    <select id="dropdownmonth-monthly" class="form-control floating-input">
                                        <option value="" selected disabled>Select Month</option>
                                        <option value="1">January</option>
                                        <option value="2">February</option>
                                        <option value="3">March</option>
                                        <option value="4">April</option>
                                        <option value="5">May</option>
                                        <option value="6">June</option>
                                        <option value="7">July</option>
                                        <option value="8">August</option>
                                        <option value="9">September</option>
                                        <option value="10">October</option>
                                        <option value="11">November</option>
                                        <option value="12">December</option>
                                    </select>
                                    <label class="floating-label" for="dropdownmonth-monthly">Month</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group position-relative">
                                    <select id="dropdownyear" class="form-control floating-input">
                                        <option value="" selected disabled>Select Year</option>
                                        @for (int i = 2005; i <= 2027; i++)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                    <label class="floating-label" for="dropdownyear">Year</label>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3 justify-content-center">
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="empid-monthly" class="fixed-label">Employee<span class="text-danger">*</span>:</label>
                                <select class="form-control form-control-sm" id="empid-monthly">
                                    <option value="0">--Select Employee--</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mb-3 justify-content-center">
                            <div class="col-md-6 text-center">
                                <button type="button" class="btn btn-primary btn-sm me-2">GO</button>
                                <button type="button" class="btn btn-secondary btn-sm">Clear</button>
                            </div>
                        </div>
                    </div>

                    <!-- Assign/Cancel Section -->
                    <div id="assign-section" style="display:none;">
                        <div class="row mb-3">
                            <div class="col-md-2"></div>
                            <div class="col-md-4">
                                <div class="form-group position-relative">
                                    <select id="dropdownmonth-assign" class="form-control floating-input">
                                        <option value="" selected disabled>Select Month</option>
                                        <option value="1">January</option>
                                        <option value="2">February</option>
                                        <option value="3">March</option>
                                        <option value="4">April</option>
                                        <option value="5">May</option>
                                        <option value="6">June</option>
                                        <option value="7">July</option>
                                        <option value="8">August</option>
                                        <option value="9">September</option>
                                        <option value="10">October</option>
                                        <option value="11">November</option>
                                        <option value="12">December</option>
                                    </select>
                                    <label class="floating-label" for="dropdownmonth-assign">Month</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group position-relative">
                                    <select id="processtypeid" class="form-control floating-input">
                                        <option value="0">Assign WeekOff</option>
                                        <option value="1">Cancel WeekOff</option>
                                    </select>
                                    <label class="floating-label" for="processtypeid">Process Type</label>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3 justify-content-center">
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="empid-assign" class="fixed-label">Employee<span class="text-danger">*</span>:</label>
                                <select class="form-control form-control-sm" id="empid-assign">
                                    <option value="0">--Select Employee--</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mb-3 justify-content-center">
                            <div class="col-md-6 text-center">
                                <button type="button" class="btn btn-primary btn-sm me-2">GO</button>
                                <button type="button" class="btn btn-secondary btn-sm">Clear</button>
                            </div>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>

<!-- jQuery Script -->
<script>
    $(document).ready(function () {
        function toggleSections() {
            $('#weekly-section').hide();
            $('#monthly-section').hide();
            $('#assign-section').hide();

            if ($('#weelyid').is(':checked')) {
                $('#weekly-section').show();
            } else if ($('#monthlyid').is(':checked')) {
                $('#monthly-section').show();
            } else if ($('#assignid').is(':checked')) {
                $('#assign-section').show();
            }
        }

        // Initial check on page load
        toggleSections();

        // Handle change event
        $('input[name="Status"]').on('change', function () {
            toggleSections();
        });
    });
</script>
