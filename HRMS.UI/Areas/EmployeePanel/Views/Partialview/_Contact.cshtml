<style>
    .form-heading {
        background-color: #87CEEB;
        padding: 8px 15px;
        font-weight: bold;
        color: #000;
        border-radius: 4px 4px 0 0;
        margin-bottom: 10px;
    }

    .form-row {
        display: flex;
        flex-wrap: wrap;
        margin-bottom: 10px;
    }

    .form-group-custom,
    .d-flex.align-items-center {
        display: flex;
        align-items: center;
        margin-bottom: 6px;
    }

    .form-control-sm, .form-select-sm {
        width: 230px;
    }

    .form-check-input {
        transform: scale(1.1);
        margin-right: 5px;
    }

    .form-check-label {
        margin-right: 15px;
    }

    .form-section {
        display: none;
        border: 1px solid #ccc;
        padding: 15px;
        background-color: #fff;
    }

    .section-title {
        font-weight: bold;
        margin: 10px 0;
    }

    .col-md-6 table {
        width: 100%;
        table-layout: fixed;
    }

    .col-md-6 th,
    .col-md-6 td {
        word-wrap: break-word;
    }
</style>

