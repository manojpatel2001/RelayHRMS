@inject IConfiguration Configuration
@{
    Layout = null;
    string baseUrl = Configuration["BaseUrlSettings:baseUrl"];

}

<div id="form-section-area">
    <div id="Qualification-form" class="card p-3 form-section">
        <div class="form-heading">Qualification</div>

        <div class="form-row">
            <!-- Row 1 -->
            <div class="row mb-2 g-3">
                <div class="col-md-4 d-flex align-items-center">
                    <label class="form-label-fixed mb-0">Education  :</label>
                    <input type="text" class="form-control form-control-sm" style="width: 230px;">
                </div>
                <div class="col-md-4 d-flex align-items-center">
                    <label class="form-label-fixed mb-0">Specialization:</label>
                    <input type="text" class="form-control form-control-sm" style="width: 230px;">
                </div>
            </div>

            <div class="row mb-2 g-3">
                <div class="col-md-4 d-flex align-items-center">
                    <label class="form-label-fixed mb-0">Year  :</label>
                    <input type="text" class="form-control form-control-sm" style="width: 230px;">
                </div>
                <div class="col-md-4 d-flex align-items-center">
                    <label class="form-label-fixed mb-0">Score/Class:</label>
                    <input type="text" class="form-control form-control-sm" style="width: 230px;">
                </div>
            </div>

            <div class="row mb-2 g-3">
                <div class="col-md-4 d-flex align-items-center">
                    <label class="form-label-fixed mb-0">Start Date  :</label>
                    <input type="text" class="form-control form-control-sm" style="width: 230px;">
                </div>
                <div class="col-md-4 d-flex align-items-center">
                    <label class="form-label-fixed mb-0">End Date:</label>
                    <input type="text" class="form-control form-control-sm" style="width: 230px;">
                </div>
            </div>

            <div class="row mb-2 g-3">
                <div class="col-md-4 d-flex align-items-center">
                    <label class="form-label-fixed mb-0">Comments  :</label>
                    <textarea class="form-control form-control-sm" rows="3"></textarea>
                </div>
                <div class="col-md-4 d-flex align-items-center">
                    <label class="form-label-fixed mb-0">Attach Documents :</label>
                    <input type="file" class="form-control form-control-sm">
                </div>
            </div>
        </div>

        <!-- Submit button -->
        <div class="text-center mb-3">
            <button class="btn btn-primary btn-sm">Submit</button>
        </div>

        <!-- New Heading like "Qualification" -->
        <div class="form-heading">Qualification Record(s)</div>

        <!-- Delete Button aligned to right -->
        <div class="text-end mb-3">
            <button class="btn btn-primary btn-sm">Delete</button>
        </div>
    </div>
</div>  