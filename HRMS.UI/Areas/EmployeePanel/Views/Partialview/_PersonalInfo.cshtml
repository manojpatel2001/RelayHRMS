@inject IConfiguration Configuration
@{
    string baseUrl = Configuration["BaseUrlSettings:baseUrl"];
    var uri = new Uri(baseUrl);
    string baseDomainUrl = $"{uri.Scheme}://{uri.Host}:{uri.Port}";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<style>
    .form-heading {
        background-color: #87CEEB;
        padding: 8px 15px;
        font-weight: bold;
        color: #000;
        border-radius: 4px 4px 0 0;
        margin-bottom: 10px;
    }

    .form-row {
        display: flex;
        flex-wrap: wrap;
        margin-bottom: 10px;
    }

    .form-group-custom,
    .d-flex.align-items-center {
        display: flex;
        align-items: center;
        margin-bottom: 6px;
    }

    .form-control-sm, .form-select-sm {
        width: 230px;
    }

    .form-check-input {
        transform: scale(1.1);
        margin-right: 5px;
    }

    .form-check-label {
        margin-right: 15px;
    }

    .form-section {
        display: none;
        border: 1px solid #ccc;
        padding: 15px;
        background-color: #fff;
    }

    .section-title {
        font-weight: bold;
        margin: 10px 0;
    }

    .col-md-6 table {
        width: 100%;
        table-layout: fixed;
    }

    .col-md-6 th,
    .col-md-6 td {
        word-wrap: break-word;
    }
</style>

<!-- Personal Information-->
<div id="form-section-area">
    <div id="personal-form" class="card p-3 form-section">
        <div class="form-heading">Personal Information</div>
        <div class="form-row">
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Gender :</label>
                <select class="form-select form-select-sm" id="ddlGender">
                    <option value="">--Select--</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Personal Email ID:</label>
                <input type="text" class="form-control form-control-sm" id="inpPersonalEmailId">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Father's Name :</label>
                <input type="text" class="form-control form-control-sm" id="inpFatherName">
            </div>
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Mother Name :</label>
                <input type="text" class="form-control form-control-sm" id="inpMotherName">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Date of Birth:</label>
                <input type="date" class="form-control form-control-sm ">
            </div>

            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">PAN No:</label>
                <input type="text" class="form-control form-control-sm" id="inpPanNo">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">UAN Number :</label>
                <input type="text" class="form-control form-control-sm" id="inpUanNumber">
            </div>
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Probation :</label>
                <input type="text" class="form-control form-control-sm" id="inpProbationCompletionPeriod">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Marital Status :</label>
                <input type="text" class="form-control form-control-sm" id="ddlMaritalStatus">
            </div>
            <div class="form-group-custom d-flex align-items-center">
                <label class="form-label-fixed mb-0" for="chkMetro">Is Metro City :</label>
                <div class="ms-3 d-flex align-items-center">
                    <input class="form-check-input" type="checkbox" id="chkMetro">
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Confirm Date:</label>
                <input type="date" class="form-control form-control-sm" id="inpConfirmDate">
            </div>
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Date of Retirement:</label>
                <input type="date" class="form-control form-control-sm" id="inpRetirementDate">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group-custom d-flex align-items-center">
                <label class="form-label-fixed mb-0" for="chkDisability">Physical Disability :</label>
                <div class="ms-3 d-flex align-items-center">
                    <input class="form-check-input" type="checkbox" id="chkDisability">
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Aadhar Card No:</label>
                <input type="text" class="form-control form-control-sm" id="inpAadharCardNo">
            </div>
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Skill Type:</label>
                <input type="text" class="form-control form-control-sm">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Mark Identification:</label>
                <input type="text" class="form-control form-control-sm" id="inpMarkIdentification">
            </div>
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Blood Group :</label>
                <select class="form-select form-select-sm" id="ddlBloodGroup">
                    <option value="">-- Select --</option>
                    <option value="A+">A+</option>
                    <option value="A-">A-</option>
                    <option value="B+">B+</option>
                    <option value="B-">B-</option>
                    <option value="AB+">AB+</option>
                    <option value="AB-">AB-</option>
                    <option value="O+">O+</option>
                    <option value="O-">O-</option>
                </select>
            </div>
        </div>
        <div class="form-group-custom d-flex align-items-center">
            <label class="form-label-fixed mb-0">More Details:</label>
            <button type="button" id="btnShowMore" class="btn btn-sm btn-primary ms-2">Show</button>
        </div>
    </div>

    <div id="more-details-form" class="card p-3 mt-3 form-section" style="display: none;">
        <!-- additional form -->
        <div class="form-row">
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Dispensary:</label>
                <input type="text" class="form-control form-control-sm" id="inpDispensary">
            </div>
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Doctor Name:</label>
                <input type="text" class="form-control form-control-sm" id="inpDoctorName">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Dispensary Address:</label>
                <input type="text" class="form-control floating-input" placeholder="Dispensary Address" id="inpDispensaryAddress" />
                @* ///// *@
                <textarea class="form-control form-control-sm" rows="3"></textarea>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Driving Lic :</label>
                <input type="text" class="form-control form-control-sm" id="inpDrivingLicense">
            </div>
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Driving Lic. Expire Date:</label>
                <input type="text" class="form-control form-control-sm" id="inpDrivingLicenseExpiry">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Tally Ledger Name:</label>
                <select class="form-select form-select-sm" id="ddlTallyLedgerName">
                    <option value="">-- Select --</option>
                </select>
            </div>
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Religion:</label>
                <input type="text" class="form-control form-control-sm" id="inpReligion">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">UID No:</label>
                <input type="text" class="form-control form-control-sm">
            </div>
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Religion:</label>
                <input type="text" class="form-control form-control-sm">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Height :</label>
                <input type="text" class="form-control form-control-sm">
            </div>
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Category(Cast):</label>
                <select class="form-select form-select-sm" id="ddlCasteCategory">
                    <option value="">-- Select Caste--</option>
                    <option value="SC">SC</option>
                    <option value="ST">ST</option>
                    <option value="OBC">OBC</option>
                    <option value="SBC">SBC</option>
                    <option value="OPEN">OPEN</option>
                    <option value="VJNT">VJNT</option>
                    <option value="Other">Other</option>
                </select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Insurance No:</label>
                <input type="text" class="form-control form-control-sm">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Dress Code:</label>
                <input type="text" class="form-control form-control-sm" id="inpDressCode">
            </div>
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Shirt Size:</label>
                <input type="text" class="form-control form-control-sm" id="inpShirtSize">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Pent Size:</label>
                <input type="text" class="form-control form-control-sm" id="inpPantSize">
            </div>
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Shoe Size:</label>
                <input type="text" class="form-control form-control-sm" id="inpShoeSize">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Canteen Code:</label>
                <input type="text" class="form-control form-control-sm" id="inpCanteenCode">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Vehicle No:</label>
                <input type="text" class="form-control form-control-sm" id="inpVehicleNo">
            </div>
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Ration Card Type:</label>
                <select class="form-select form-select-sm" id="ddlRationCardType">
                    <option value="">-- Select --</option>
                </select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">Ration Card No :</label>
                <input type="text" class="form-control form-control-sm" id="inpRationCardNo">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">
                    LinkedIn ID: <i class="fab fa-linkedin text-primary ms-1"></i>
                </label>
                <input type="text" class="form-control form-control-sm" id="inpLinkedInId">
            </div>
            <div class="form-group-custom">
                <label class="form-label-fixed mb-0">
                    Twitter ID: <i class="fab fa-twitter text-info ms-1"></i>
                </label>
                <input type="text" class="form-control form-control-sm" id="inpTwitterId">
            </div>
        </div>
        <!-- Submit button outside both forms -->
        <div id="submit-button-wrapper" class="form-group-custom d-flex align-items-center mt-3">
            <button type="button" id="btnSubmit" class="btn btn-sm btn-primary ms-2">Submit</button>
        </div>
    </div>
    
</div> 