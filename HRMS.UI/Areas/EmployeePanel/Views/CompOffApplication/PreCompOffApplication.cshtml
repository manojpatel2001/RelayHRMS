@{
    ViewData["Title"] = "Employee Panel";
    Layout = "~/Areas/EmployeePanel/Views/Shared/_EmployeeLayout.cshtml";
    string baseUrl = ViewBag.BaseUrl;
    string apiBase = ViewBag.BaseUrlAPI;
}

<link href="~/commoncss.css" rel="stylesheet" />

<style>
    .fixed-label {
        min-width: 200px;
        white-space: nowrap;
        margin-bottom: 0;
        text-align: right;
        padding-right: 25px;
    }
</style>

<div class="card">
    <div class="card-header bg-transparent ml-0 py-2">
        <div class="row">
            <div class="col-6">
                <h4 class="pt-2 mb-0">Pre Comp-Off Application</h4>
            </div>
        </div>
    </div>

    <!-- Reduced vertical gap -->
    <div class="card mt-2">
        <div class="card-header bg-transparent py-2">
            <div class="row align-items-center">
                <div class="col">
                    <h6 class="mb-0">Search Panel</h6>
                </div>
                <div class="col-auto">
                    <a href='@Url.Action("AddPreCompOffApplication", "CompOffApplication", new { area = "EmployeePanel" })' class="btn btn-primary btn-sm">Add</a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="form-container">
                <form>
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <!-- Row 1 -->
                            <div class="row mb-2">
                                <div class="col-md-6 d-flex align-items-center">
                                    <label for="applicationDate" class="col-form-label fixed-label">Application From Date:</label>
                                    <input type="date" class="form-control form-control-sm" id="applicationDate" name="applicationDate" placeholder="DD-MM-YYYY">
                                </div>
                                <div class="col-md-6 d-flex align-items-center">
                                    <label for="applicationtoDate" class="col-form-label fixed-label">Application To Date:</label>
                                    <input type="date" class="form-control form-control-sm" id="applicationtoDate" name="applicationtoDate" placeholder="DD-MM-YYYY">
                                </div>
                            </div>

                            <!-- Row 2 -->
                            <div class="row mb-2">
                                <div class="col-md-6 d-flex align-items-center">
                                    <label for="prefromdateid" class="col-form-label fixed-label">Pre Comp-Off From Date:</label>
                                    <input type="date" class="form-control form-control-sm" id="prefromdateid">
                                </div>
                                <div class="col-md-6 d-flex align-items-center">
                                    <label for="precompoffid" class="col-form-label fixed-label">Pre Comp-Off To Date:</label>
                                    <input type="date" class="form-control form-control-sm" id="precompoffid">
                                </div>
                            </div>

                            <!-- Submit Buttons -->
                            <div class="row mb-2 justify-content-center">
                                <div class="col-auto">
                                    <button type="submit" class="btn btn-primary btn-sm me-2">Submit</button>
                                    <button type="reset" class="btn btn-secondary btn-sm">Clear</button>
                                </div>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
