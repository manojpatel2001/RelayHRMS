@{
    ViewData["Title"] = "Employee Panel";
    Layout = "~/Areas/EmployeePanel/Views/Shared/_EmployeeLayout.cshtml";
    string baseUrl = ViewBag.BaseUrl;
    string apiBase = ViewBag.BaseUrlAPI;
}
<link href="~/commoncss.css" rel="stylesheet" />

<style>
    .fixed-label {
        min-width: 180px;
        white-space: nowrap;
        margin-bottom: 0;
        text-align: right;
    }
</style>

<div class="card">
    <div class="card-header bg-transparent ml-0 py-0">
        <div class="row">
            <div class="col-6">
                <h4 class="pt-2 mb-0">Comp Off Application</h4>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header bg-transparent">
                <div class="row align-items-center">
                    <div class="col">
                        <h6 class="mb-0">Search Panel</h6>
                    </div>
                    <div class="col-auto">
                        <a href="@Url.Action("AddCompOffApplication", "CompOffApplication", new { area = "EmployeePanel" })" class="btn btn-primary">Add</a>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <form>
                    <div class="col-md-8 mx-auto">
                        <!-- Search Type -->
                        <div class="row mb-3">
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="searchtypeid" class="fixed-label">Search Type:</label>
                                <select class="form-control form-control-sm" id="searchtypeid">
                                    <option value="0">Extra Work Date</option>
                                </select>
                            </div>

                            <!-- Date Filter -->
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="searchforid" class="fixed-label">Search For:</label>
                                <input type="date" class="form-control form-control-sm" id="searchforid" />
                            </div>
                        </div>

                        <!-- Status Filter -->
                        <div class="row mb-3 justify-content-center">
                            <div class="col-md-4 d-flex justify-content-center gap-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="Status" id="pendingid" value="Pending" checked>
                                    <label class="form-check-label" for="pendingid">Pending</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="Status" id="approvedid" value="Approved">
                                    <label class="form-check-label" for="approvedid">Approved</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="Status" id="rejectedid" value="Rejected">
                                    <label class="form-check-label" for="rejectedid">Rejected</label>
                                </div>
                            </div>
                        </div>

                        <!-- GO / Clear Buttons -->
                        <div class="row mb-3 justify-content-center">
                            <div class="col-md-6 text-center">
                                <button type="button" id="goid" class="btn btn-primary btn-sm me-2">GO</button>
                                <button type="button" id="clearid" class="btn btn-secondary btn-sm">Clear</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Table -->
            <div class="table-responsive px-3 pb-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Emp Code</th>
                            <th>Full Name</th>
                            <th>Branch</th>
                            <th>Extra Work Date</th>
                            <th>Hours</th>
                            <th>Reason</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody id="resultBody">
                        <tr><td colspan="8">No records found.</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    const apiBase = '@apiBase';

    $(document).ready(function () {
        // Load initially with Pending status and no date
        loadAllApplications("", "Pending");

        $('#goid').on('click', function () {
            const selectedStatus = $('input[name="Status"]:checked').val();
            const selectedDate = $('#searchforid').val(); // may be empty
            loadAllApplications(selectedDate, selectedStatus);
        });

        $('#clearid').on('click', function () {
            $('#searchtypeid').val("0");
            $('#searchforid').val("");
            $('input[name="Status"]').prop('checked', false);
            $('#pendingid').prop('checked', true);
            loadAllApplications("", "Pending");
        });

        $('input[name="Status"]').on('change', function () {
            const selectedStatus = $(this).val();
            const selectedDate = $('#searchforid').val();
            loadAllApplications(selectedDate, selectedStatus);
        });
    });

    function loadAllApplications(date, status) {
       alert("hii")
        debugger;
        const payload = {
            SearchType: "0", // hardcoded because dropdown is static
            SearchFor: date || "",
            Status: status
        };

        $.ajax({
              url: apiBase + '/CompOffAPI/GetCompOffApplications',
            method: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(payload),
            success: function (res) {
                debugger;
                const $tbody = $('#resultBody');
                $tbody.empty();
                console.log("res",res);
                if (res.isSuccess && res.data && res.data.length > 0) {
                    res.data.forEach(item => {
                        const row = `
                            <tr>
                                <td>${item.comp_Off_Detailsid}</td>
                                <td>${item.emp_Code}</td>
                                <td>${item.fullName}</td>
                                <td>${item.branchName}</td>
                                <td>${formatDate(item.extra_Work_Day)}</td>
                                <td>${item.extra_Work_Hours}</td>
                                <td>${item.comoffReason}</td>
                                <td>${item.application_Status}</td>
                            </tr>`;
                        $tbody.append(row);
                    });
                } else {
                    $tbody.append('<tr><td colspan="8">No records found.</td></tr>');
                }
            },
            error: function (xhr) {
                Swal.fire("❌ Server error", xhr.responseText, "error");
            }
        });
    }

    function formatDate(dateStr) {
        if (!dateStr) return '';
        const date = new Date(dateStr);
        return date.toLocaleDateString('en-GB');
    }
</script>
