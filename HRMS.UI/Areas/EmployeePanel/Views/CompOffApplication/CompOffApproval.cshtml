@{
    ViewData["Title"] = "Employee Panel";
    Layout = "~/Areas/EmployeePanel/Views/Shared/_EmployeeLayout.cshtml";
    string baseUrl = ViewBag.BaseUrl;
    string apiBase = ViewBag.BaseUrlAPI;
}
<link href="~/commoncss.css" rel="stylesheet" />
<style>
    .fixed-label {
        min-width: 130px;
        white-space: nowrap;
        margin-bottom: 0;
        text-align: right;
    }
</style>

<div class="card">
    <div class="card-header bg-transparent ml-0 py-0">
        <div class="row">
            <div class="col-6">
                <h4 class="pt-2 mb-0">Comp Off Approval</h4>
            </div>
        </div>

        <!-- Search Panel -->
        <div class="card mt-3">
            <div class="card-header bg-transparent">
                <h6 class="mb-0">Search Panel</h6>
            </div>
            <div class="card-body">
                <form>
                    <div class="col-md-8 mx-auto">
                        <div class="row mb-3">
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="searchtypeid" class="fixed-label">Search Type:</label>
                                <select class="form-control form-control-sm" id="searchtypeid">
                                    <option value="0">Employee Name</option>
                                    <option value="1">Emp Code</option>
                                </select>
                            </div>
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="searchforid" class="fixed-label">Search For:</label>
                                <input type="text" class="form-control form-control-sm" id="searchforid" />
                            </div>
                        </div>

                        <div class="row mb-3 justify-content-center">
                            <div class="col-md-4 d-flex justify-content-center gap-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="Status" id="pendingid" value="Pending" checked>
                                    <label class="form-check-label" for="pendingid">Pending</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="Status" id="approvedid" value="Approved">
                                    <label class="form-check-label" for="approvedid">Approved</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="Status" id="rejectedid" value="Rejected">
                                    <label class="form-check-label" for="rejectedid">Rejected</label>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3 justify-content-center">
                            <div class="col-md-6 text-center">
                                <button type="button" id="goid" class="btn btn-primary btn-sm me-2">GO</button>
                                <button type="button" id="clearid" class="btn btn-secondary btn-sm">Clear</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Result Table -->
        <div class="card mt-3">
            <div class="card-header bg-light">
                <strong>Search Results</strong>
            </div>
            <div class="card-body p-2">
                <div class="table-responsive">
                    <table class="table table-bordered table-sm text-center" id="resultTable">
                        <thead class="table-secondary">
                            <tr>
                                <th class="action-col">Select</th>
                                <th>Comp Off ID</th>
                                <th>Emp Code</th>
                                <th>Employee Name</th>
                                <th>Branch</th>
                                <th>Extra Work Date</th>
                                <th>Hours</th>
                                <th>Reason</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody id="resultBody">
                            <tr><td colspan="9">No records found.</td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Approve/Reject Buttons -->
        <div class="row mb-3 justify-content-center" id="actionButtonsWrapper">
            <div class="col-md-6 text-center">
                <button type="button" id="approveid" class="btn btn-primary btn-sm me-2">Approve</button>
                <button type="button" id="rejectid" class="btn btn-danger btn-sm">Reject</button>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    const apiBase = '@apiBase';

    $(document).ready(function () {
        handleUIVisibility();
        loadAllApplications("0", "", "Pending");

        $('input[name="Status"]').on('change', function () {
            handleUIVisibility();
            loadAllApplications($('#searchtypeid').val(), $('#searchforid').val(), $(this).val());
        });

        $('#goid').on('click', function () {
            const selectedStatus = $('input[name="Status"]:checked').val();
            loadAllApplications($('#searchtypeid').val(), $('#searchforid').val(), selectedStatus);
        });

        $('#clearid').on('click', function () {
            $('#searchtypeid').val("0");
            $('#searchforid').val("");
            $('input[name="Status"]').prop('checked', false);
            $('#resultBody').html('<tr><td colspan="9">No records found.</td></tr>');
            $('#actionButtonsWrapper').hide();
            $('.action-col').hide();
        });

        $('#approveid').on('click', function () {
            handleApprovalOrRejection("Approved");
        });

        $('#rejectid').on('click', function () {
            handleApprovalOrRejection("Rejected");
        });
    });

    function handleUIVisibility() {
        const status = $('input[name="Status"]:checked').val();
        if (status === "Pending") {
            $('#actionButtonsWrapper').show();
            $('.action-col').show();
        } else {
            $('#actionButtonsWrapper').hide();
            $('.action-col').hide();
        }
    }

    function loadAllApplications(searchtype, searchfor, status) {
        const payload = {
            SearchType: searchtype === "0" ? "EmployeeName" : "EmployeeCode",
            SearchFor: searchfor,
            Status: status
        };

        $.ajax({
            url: apiBase + '/CompOffAPI/GetCompOffApplications',
            method: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(payload),
            success: function (res) {
                const $tbody = $('#resultBody');
                $tbody.empty();

                if (res.isSuccess && res.data && res.data.length > 0) {
                    res.data.forEach(item => {
                        const row = `
                            <tr>
                                <td class="action-col">
                                    <input type="checkbox" class="row-checkbox" data-id="${item.comp_Off_DetailsId}">
                                </td>
                                <td>${item.comp_Off_DetailsId}</td>
                                <td>${item.emp_Code}</td>
                                <td>${item.fullName}</td>
                                <td>${item.branchName}</td>
                                <td>${formatDate(item.extra_Work_Day)}</td>
                                <td>${item.extra_Work_Hours}</td>
                                <td>${item.comoffReason}</td>
                                <td>${item.application_Status}</td>
                            </tr>
                        `;
                        $tbody.append(row);
                    });
                    handleUIVisibility();
                } else {
                    $tbody.append('<tr><td colspan="9">No records found.</td></tr>');
                }
            },
            error: function (xhr) {
                Swal.fire("❌ Server error", xhr.responseText, "error");
            }
        });
    }

    function formatDate(dateStr) {
        if (!dateStr) return '';
        const date = new Date(dateStr);
        return date.toLocaleDateString('en-GB');
    }

    function handleApprovalOrRejection(status) {
        const selectedIds = [];
        $('.row-checkbox:checked').each(function () {
            const id = parseInt($(this).data('id'));
            if (!isNaN(id)) selectedIds.push(id);
        });

        if (selectedIds.length === 0) {
            Swal.fire("⚠", "Please select at least one row.", "warning");
            return;
        }

        const payload = {
            empIds: selectedIds,
            status: status
        };

        $.ajax({
            url: apiBase + '/CompOffAPI/CompOffDetailsApproveorReject',
            method: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(payload),
            success: function (res) {
                if (res.isSuccess) {
                    Swal.fire("✅ Success", res.responseMessage, "success");
                    const selectedStatus = $('input[name="Status"]:checked').val();
                    loadAllApplications($('#searchtypeid').val(), $('#searchforid').val(), selectedStatus);
                } else {
                    Swal.fire("❌ Failed", res.responseMessage, "error");
                }
            },
            error: function (xhr) {
                Swal.fire("❌ Server error", xhr.responseText, "error");
            }
        });
    }
</script>
