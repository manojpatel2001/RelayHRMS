@{
    ViewData["Title"] = "Employee Panel";
    Layout = "~/Areas/EmployeePanel/Views/Shared/_EmployeeLayout.cshtml";
    string baseUrl = ViewBag.BaseUrl;
}
<link href="~/commoncss.css" rel="stylesheet" />

<style>
    .fixed-label {
        min-width: 220px; /* Adjusted for full label visibility */
        white-space: nowrap;
        margin-bottom: 0;
        text-align: right;
        padding-right: 10px;
    }
</style>

<div class="card">
    <div class="card-header bg-transparent py-0">
        <div class="row">
            <div class="col-6">
                <h4 class="pt-2 mb-0">Pre Comp-Off Approval</h4>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="card">
            <div class="card-header bg-transparent">
                <h6 class="mb-0">Search Panel</h6>
            </div>

            <div class="card-body">
                <form>
                    <div class="col-md-10 mx-auto">

                        <!-- Row 1: Search Type & Search For -->
                        <div class="row mb-3">
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="searchtypeid" class="fixed-label">Search Type:</label>
                                <select class="form-control form-control-sm" id="searchtypeid">
                                    <option value="0">Employee Name</option>
                                    <option value="1">Emp Code</option>
                                </select>
                            </div>

                            <div class="col-md-6 d-flex align-items-center">
                                <label for="searchforid" class="fixed-label">Search For:</label>
                                <input type="text" class="form-control form-control-sm" id="searchforid" />
                            </div>
                        </div>

                        <!-- Row 2: Application Date Range -->
                        <div class="row mb-3">
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="applicationDate" class="fixed-label">Application From Date:</label>
                                <input type="date" class="form-control form-control-sm" id="applicationDate" name="applicationDate">
                            </div>

                            <div class="col-md-6 d-flex align-items-center">
                                <label for="applicationtoDate" class="fixed-label">Application To Date:</label>
                                <input type="date" class="form-control form-control-sm" id="applicationtoDate" name="applicationtoDate">
                            </div>
                        </div>

                        <!-- Row 3: Pre Comp-Off Date Range -->
                        <div class="row mb-3">
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="fromid" class="fixed-label">Pre Comp-Off From Date:</label>
                                <input type="date" class="form-control form-control-sm" id="fromid">
                            </div>

                            <div class="col-md-6 d-flex align-items-center">
                                <label for="precompoffid" class="fixed-label">Pre Comp-Off To Date:</label>
                                <input type="date" class="form-control form-control-sm" id="precompoffid">
                            </div>
                        </div>

                        <!-- Row 4: Status Radio Buttons -->
                        <div class="row mb-3 justify-content-center">
                            <div class="col-md-6 d-flex justify-content-center gap-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="Status" id="pendingid">
                                    <label class="form-check-label" for="pendingid">Pending</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="Status" id="approvedid">
                                    <label class="form-check-label" for="approvedid">Approved</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="Status" id="rejectedid">
                                    <label class="form-check-label" for="rejectedid">Rejected</label>
                                </div>
                            </div>
                        </div>

                        <!-- Row 5: Action Buttons -->
                        <div class="row mb-3 justify-content-center">
                            <div class="col-md-6 text-center">
                                <button type="button" class="btn btn-primary btn-sm me-2">GO</button>
                                <button type="button" class="btn btn-secondary btn-sm">Clear</button>
                            </div>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
