                            </div>
                        </div>
                        <div class="modal-body p-0" style="background: #f8f9fa;">
                            <div id="pdfLoadingSpinner" class="text-center p-4">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                                <p class="mt-2 text-muted">Loading document preview...</p>
                            </div>
                            <iframe id="pdfFrame"
                                      src="${url}#toolbar=0&navpanes=0&scrollbar=1&view=FitH&zoom=80"
                                    style="width:100%; height:calc(100vh - 140px); border:none; display:none;"
                                    onload="hidePdfLoadingSpinner()"
                                    title="${fileName}">
                            </iframe>
                        </div>
                    </div>
                </div>
            </div>
        `;

        $('#customPdfViewer').remove();
        $('body').append(modalHtml);
        $('#customPdfViewer').modal('show');
    }

    function hidePdfLoadingSpinner() {
        $('#pdfLoadingSpinner').hide();
        $('#pdfFrame').show();
    }


    function openPDFViewOnly(url, fileName) {
        const viewOnlyUrl = `${url}#toolbar=0&navpanes=0&scrollbar=1&view=FitH&zoom=100`;
        window.open(viewOnlyUrl, '_blank', 'noopener,noreferrer,toolbar=0,menubar=0,location=0');
    }
        

</script>
