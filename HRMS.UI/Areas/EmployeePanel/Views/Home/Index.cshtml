            url: apiUrl,
            type: 'GET',
            success: function (response) {
                const members = response.data;
                if (!Array.isArray(members) || members.length === 0) {
                    $('#groupedBirthdayList')
                        .html('<p class="text-muted">No upcoming birthdays found.</p>')
                        .removeClass('has-birthday');
                    return;
                }

                // ✅ STEP 1: Get today's date info
                const today = new Date();
                const todayDay = today.getDate();
                const todayMonth = today.getMonth(); // 0-11
                const todayYear = today.getFullYear();

                // ✅ STEP 2: Categorize birthdays into TODAY and UPCOMING
                const todayBirthdays = [];
                const upcomingBirthdays = [];

                members.forEach(member => {
                    const dateObj = new Date(member.date);
                    const memberDay = dateObj.getDate();
                    const memberMonth = dateObj.getMonth();

                    // Check if birthday is today
                    if (memberDay === todayDay && memberMonth === todayMonth) {
                        todayBirthdays.push(member);
                    } else {
                        upcomingBirthdays.push(member);
                    }
                });

                // ✅ STEP 3: Sort upcoming birthdays by actual date (day and month)
                upcomingBirthdays.sort((a, b) => {
                    const dateA = new Date(a.date);
                    const dateB = new Date(b.date);

                    // Calculate days from today for proper ordering
                    const getDaysFromToday = (date) => {
                        const month = date.getMonth();
                        const day = date.getDate();
                        const currentMonth = today.getMonth();
                        const currentDay = today.getDate();

                        let monthDiff = month - currentMonth;

                        // Handle year wrap (e.g., Jan after Dec)
                        if (monthDiff < 0 || (monthDiff === 0 && day < currentDay)) {
                            monthDiff += 12;
                        }

                        return monthDiff * 31 + day;
                    };

                    return getDaysFromToday(dateA) - getDaysFromToday(dateB);
                });

                // ✅ STEP 4: Build HTML - TODAY first, then UPCOMING
