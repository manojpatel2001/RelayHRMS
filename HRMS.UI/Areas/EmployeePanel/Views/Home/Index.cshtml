<script>
    // Change top border color based on active tab
    function changeTopBorder(color) {
        const topBorder = document.getElementById('wishesTopBorder');
        if (topBorder) {
            topBorder.style.background = `linear-gradient(to right, ${color} 0%, ${color} 100%)`;
            topBorder.style.display = 'block';
            topBorder.style.visibility = 'visible';
            topBorder.style.opacity = '1';
            topBorder.style.height = '3px';
            topBorder.style.position = 'absolute';
            topBorder.style.top = '0';
            topBorder.style.left = '0';
            topBorder.style.right = '0';
            topBorder.style.zIndex = '1000';
        }
    }

    // Ensure border is visible on page load and tab changes
    function ensureBorderVisible() {
        const topBorder = document.getElementById('wishesTopBorder');
        if (topBorder) {
            topBorder.style.display = 'block';
            topBorder.style.visibility = 'visible';
            topBorder.style.opacity = '1';
            topBorder.style.height = '3px';
            topBorder.style.position = 'absolute';
            topBorder.style.top = '0';
            topBorder.style.left = '0';
            topBorder.style.right = '0';
            topBorder.style.zIndex = '1000';
        }
    }

    // Toggle Upcoming Holidays section
    function toggleHolidays() {
        const content = document.getElementById('holidaysContent');
        const arrow = document.getElementById('holidayArrow');
        const orgContent = document.getElementById('orgPolicyContent');
        const orgArrow = document.getElementById('orgArrow');

        if (content.style.display === 'none') {
            content.style.display = 'block';
            arrow.textContent = '▼';
            // Close Organization Policy
            orgContent.style.display = 'none';
            orgArrow.textContent = '▶';
        } else {
            content.style.display = 'none';
            arrow.textContent = '▶';
        }
    }

    // Toggle Organization Policy section
    function toggleOrgPolicy() {
        const content = document.getElementById('orgPolicyContent');
        const arrow = document.getElementById('orgArrow');
        const holidayContent = document.getElementById('holidaysContent');
        const holidayArrow = document.getElementById('holidayArrow');

        if (content.style.display === 'none') {
            content.style.display = 'block';
            arrow.textContent = '▼';
            // Close Upcoming Holidays
            holidayContent.style.display = 'none';
            holidayArrow.textContent = '▶';
        } else {
            content.style.display = 'none';
            arrow.textContent = '▶';
        }
    }

    // Initialize - show Upcoming Holidays by default
    document.addEventListener('DOMContentLoaded', function() {
        const holidayContent = document.getElementById('holidaysContent');
        if (holidayContent) {
            holidayContent.style.display = 'block';
        }

        // Ensure the top border is visible on page load
        ensureBorderVisible();
    });

    // Also ensure border stays visible when tabs are clicked
    document.addEventListener('click', function(e) {
        if (e.target.closest('.nav-link')) {
            setTimeout(ensureBorderVisible, 10);
        }
    });

    function renderBirthdayCards(birthdayList, containerId) {
        const container = document.getElementById(containerId);
        if (!container) return;

        let html = '';
        let currentDate = '';

        birthdayList.forEach(person => {
            // Add date badge if date changes
            if (person.date !== currentDate) {
                currentDate = person.date;
                html += `<div class="date-badge">${currentDate}</div>`;
            }

            // Birthday card with profile image
            html += `
                <div class="birthday-card">
                    <img src="${person.Profile || 'default-avatar.png'}"
                         alt="${person.name}"
                         class="birthday-profile-img"
                         onerror="this.src='default-avatar.png'">
                    <div class="birthday-card-content">
                        <div class="birthday-person-name">${person.name}</div>
                        <div class="birthday-designation">${person.designation}</div>
                        <div class="birthday-company">${person.company}</div>
                        <div class="birthday-age">Turning Age: ${person.age}</div>
                    </div>
                </div>
            `;
        });

        container.innerHTML = html;
    }
</script>
