@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Employee Panel";
    Layout = "~/Areas/EmployeePanel/Views/Shared/_EmployeeLayout.cshtml";
    string baseUrl = Configuration["BaseUrlSettings:baseUrl"];
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<style>
    body {
        overflow: hidden;
    }

    .main-card {
        max-width: 800px;
        margin: 30px auto;
        padding: 25px 35px;
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.08);
    }

    .main-card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

        .main-card-header h4 {
            margin: 0;
            font-weight: 400;
        }

    .btn-back {
        padding: 6px 20px;
        font-size: 14px;
    }

    .form-label {
        font-weight: 500;
        font-size: 14px;
        margin-bottom: 0;
        padding-top: 6px;
        text-align: right;
    }

    .form-control {
        padding: 6px 12px;
        font-size: 14px;
        height: 38px;
        padding-right: 35px;
    }

    .input-group-icon {
        position: relative;
    }

        .input-group-icon .toggle-password {
            position: absolute;
            top: 50%;
            right: 10px;
            transform: translateY(-50%);
            border: none;
            background: transparent;
            cursor: pointer;
            color: #888;
            font-size: 14px;
        }

    .btn-sm {
        font-size: 14px;
        padding: 6px 15px;
    }

    .text-danger {
        color: red;
    }

    .row.align-items-center {
        margin-bottom: 18px;
    }
</style>

<!-- ✅ Complete Card (Heading + Password Form) -->
<div class="main-card">
    <div class="main-card-header">
        <h4>Change Password</h4>
        <button class="btn btn-secondary btn-sm btn-back" onclick="window.history.back();">Back</button>
    </div>

    <form>
        <div class="row align-items-center">
            <label for="currentpassid" class="col-sm-4 col-form-label form-label">
                Current Password <span class="text-danger">*</span>
            </label>
            <div class="col-sm-6 input-group-icon">
                <input type="password" class="form-control" id="currentpassid"
                       oncopy="return false" onpaste="return false" oncut="return false" />
                <button type="button" class="toggle-password" data-target="#currentpassid">
                    <i class="fa fa-eye-slash"></i>
                </button>
            </div>
        </div>

        <div class="row align-items-center">
            <label for="newpassid" class="col-sm-4 col-form-label form-label">
                New Password <span class="text-danger">*</span>
            </label>
            <div class="col-sm-6 input-group-icon">
                <input type="password" class="form-control" id="newpassid"
                       oncopy="return false" onpaste="return false" oncut="return false" />
                <button type="button" class="toggle-password" data-target="#newpassid">
                    <i class="fa fa-eye-slash"></i>
                </button>
            </div>
        </div>

        <div class="row align-items-center">
            <label for="confirmpassid" class="col-sm-4 col-form-label form-label">
                Confirm Password <span class="text-danger">*</span>
            </label>
            <div class="col-sm-6 input-group-icon">
                <input type="password" class="form-control" id="confirmpassid"
                       oncopy="return false" onpaste="return false" oncut="return false" />
                <button type="button" class="toggle-password" data-target="#confirmpassid">
                    <i class="fa fa-eye-slash"></i>
                </button>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-sm-4"></div>
            <div class="col-sm-6">
                <button type="button" class="btn btn-primary btn-sm me-2" id="btnChangePassword">
                    <i class="fa fa-lock"></i> Change Password
                </button>
                <button type="button" class="btn btn-secondary btn-sm" id="btnClear">Clear</button>
            </div>
        </div>
    </form>
</div>

<!-- ✅ Script -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    $(document).ready(function () {
        $('#btnChangePassword').click(function () {
            changePassword();
        });

        $('#btnClear').click(function () {
            $('#currentpassid, #newpassid, #confirmpassid').val('');
        });

        $('.toggle-password').click(function () {
            const input = $($(this).data('target'));
            const type = input.attr('type') === 'password' ? 'text' : 'password';
            input.attr('type', type);
            $(this).find('i').toggleClass('fa-eye fa-eye-slash');
        });

        $('#currentpassid, #newpassid, #confirmpassid').on('copy paste cut', function (e) {
            e.preventDefault();
        });
    });

    // function isValidPassword(pwd) {
    //     return /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[\W_]).{8,}$/.test(pwd);
    // }

    function changePassword() {
        const empId = '001'; // Replace with actual EMPID
        const currentPassword = $('#currentpassid').val().trim();
        const newPassword = $('#newpassid').val().trim();
        const confirmPassword = $('#confirmpassid').val().trim();

        if (!currentPassword || !newPassword || !confirmPassword) {
            Swal.fire("Validation Error", "All fields are required.", "warning");
            return;
        }

        // if (!isValidPassword(newPassword)) {
        //     Swal.fire("Invalid Password", "Password must be at least 8 characters and include uppercase, lowercase, number, and special character.", "warning");
        //     return;
        // }

        if (newPassword !== confirmPassword) {
            Swal.fire("Validation Error", "New and Confirm Password must match.", "warning");
            return;
        }

        const payload = {
            EMPID: empId,
            CurrentPassword: currentPassword,
            NewPassword: newPassword
        };

        $.ajax({
            url: '@baseUrl/PasswordHistoryAPI/CreatePasswordHistory',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(payload),
            success: function (response) {
                if (response.isSuccess) {
                    Swal.fire("Success", response.responseMessage, "success");
                    $('#currentpassid, #newpassid, #confirmpassid').val('');
                } else {
                    Swal.fire("Error", response.responseMessage, "error");
                }
            },
            error: function () {
                Swal.fire("Error", "Something went wrong while calling API.", "error");
            }
        });
    }
</script>
