@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Employee Panel";
    Layout = "~/Areas/EmployeePanel/Views/Shared/_EmployeeLayout.cshtml";
    string baseUrl = Configuration["BaseUrlSettings:baseUrl"];
    var uri = new Uri(baseUrl);
    string baseDomainUrl = $"{uri.Scheme}://{uri.Host}:{uri.Port}";
    string UIBaseUrl = Configuration["UIBaseUrlSettings:baseUrl"];
}
<title>Search Panel</title>

<!-- jQuery + Bootstrap + SweetAlert -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>

    body, html {
        height: 100%;
        margin: 0;
        padding: 0;
    }

    .form-section {
        padding: 15px;
        border: 1px solid #ccc;
    }

    .btn-custom {
        background-color: #3e4b6d;
        color: white;
        border: none;
        padding: 4px 12px;
        font-size: 13px;
        font-weight: 600;
        border-radius: 4px;
        transition: none;
        box-shadow: none;
    }

        .btn-custom:hover,
        .btn-custom:focus,
        .btn-custom:active {
            background-color: #3e4b6d;
            color: white;
            outline: none;
            box-shadow: none;
        }

    .search-panel-wrapper {
        max-width: 100%;
        margin: auto;
    }

    .search-panel-container {
        background-color: #3e4b6d;
        padding: 6px 15px;
        border-radius: 6px;
        margin-bottom: 15px;
    }

    .search-panel-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .search-heading {
        font-size: 15px;
        color: white;
        margin: 0;
    }

    .btn-add {
        background-color: orange;
        color: white;
        font-size: 14px;
        padding: 6px 15px;
        border: none;
        border-radius: 4px;
    }

    .form-label {
        font-size: 13px;
        font-weight: 500;
        margin-bottom: 4px;
    }


    .form-control-sm, .form-select-sm {
        height: calc(1.5em + .5rem + 2px);
        font-size: 0.875rem;
        padding: .25rem .5rem;
    }

    /* Fixed container styles for full width */
    .container {
        width: 100% !important;
        max-width: 100% !important;
        min-height: 500px;
        padding: 10px;
        box-sizing: border-box;
        margin: 0;
    }

    /* Grid container specific styles */
    .grid-container {
        width: 100%;
        margin: 0;
        padding: 0;
    }

    .dx-datagrid-rowsview .dx-row {
        height: 50px !important;
        min-height: 50px !important;
    }

    /* Increase cell padding for better readability */
    .dx-datagrid-rowsview .dx-data-row > td {
        padding: 10px 8px !important;
        vertical-align: middle !important;
        font-size: 14px !important;
    }
</style>

<!-- Search Panel Header -->
<div class="search-panel-wrapper">
    <div class="search-panel-container">
        <div class="search-panel-row">
            <div class="search-heading">Search Panel</div>
        </div>
    </div>
</div>

<div class="form-section">
    <div class="d-flex flex-column align-items-center gap-3">
        <!-- Month and Year -->
        <div class="d-flex justify-content-center gap-3">
            <div class="d-flex align-items-center">
                <label for="month" class="form-label mb-0 me-2">Month<span class="text-danger">*</span>:</label>
                <select class="form-select form-select-sm" id="month" style="width: 160px;">
                    <option value="">Select Month</option>
                    <option value="1">January</option>
                    <option value="2">February</option>
                    <option value="3">March</option>
                    <option value="4">April</option>
                    <option value="5">May</option>
                    <option value="6">June</option>
                    <option value="7">July</option>
                    <option value="8">August</option>
                    <option value="9">September</option>
                    <option value="10">October</option>
                    <option value="11">November</option>
                    <option value="12">December</option>
                </select>
                <span id="spnmonth" style="color:red; display:none;">Please Select Month</span>
            </div>
            <div class="d-flex align-items-center">
                <label for="year" class="form-label mb-0 me-2">Year<span class="text-danger">*</span>:</label>
                <select class="form-select form-select-sm" id="year" style="width: 160px;">
                    <option value="">Select Year</option>
                </select>
                <span id="spnyear" style="color:red; display:none;">Please Select Year</span>
            </div>
        </div>

        <!-- Buttons -->
        <div class="d-flex justify-content-center gap-2">
            <button class="btn btn-custom" id="btnGo">Go</button>
            <button class="btn btn-custom" id="btnClear">Clear</button>
            <button class="btn btn-custom" onclick="window.location.href='@Url.Action("Index", "MyReports")'">
                Back
            </button>
        </div>
    </div>
</div>

<div class="search-panel-wrapper">
    <div class="search-panel-container">
        <div class="search-panel-row">
            <div class="search-heading">Salary Slip Report</div>
        </div>
    </div>
</div>

<!-- Delete Button + Grid Container -->
<div class="container mt-3">
    <div id="grid-loader"
         class="grid-loader justify-content-center align-items-center flex-column"
         style="display: none; position: fixed; top: 0; left: 0; width: 100vw; height: 100vh;
            background: rgba(255, 255, 255, 0.6); backdrop-filter: blur(3px); z-index: 9999;">

        <img src="@baseDomainUrl/loders/loder.png"
             class="grid-logo-spinner"
             style="width: 40px; height: 40px; animation: spin 1s linear infinite;" />

        <div class="grid-loading-text text-dark " style="font-size: 16px;">Loading...</div>
    </div>

    <!-- Grid Container with full width -->
    <div class="grid-container">
        <div id="salaryGrid"></div>
    </div>
</div>

<script>
    const savedCompany = localStorage.getItem('selectedCompany');
    var companyDetails = JSON.parse(savedCompany);
    const Compid = companyDetails.CompanyId;
    const EmployeeId = localStorage.getItem('EmployeeId');
    const Token = localStorage.getItem("authToken");

    // Load years on page load
    $(document).ready(function() {
        loadYears();
        setCurrentMonthYear(); // Set current month and year as default
    });

    function loadYears() {
        const currentYear = new Date().getFullYear();
        const yearSelect = $('#year');
        for (let year = currentYear; year >= currentYear - 1; year--) {
            yearSelect.append(`<option value="${year}">${year}</option>`);
        }
        const nextYear = currentYear + 1;
        if (new Date().getMonth() === 11 && new Date().getDate() >= 25) {
            yearSelect.append(`<option value="${nextYear}">${nextYear}</option>`);
        }
    }

    function setCurrentMonthYear() {
        const currentDate = new Date();
        const currentMonth = currentDate.getMonth() + 1; // getMonth() returns 0-11
        const currentYear = currentDate.getFullYear();
        $('#month').val(currentMonth);
        $('#year').val(currentYear);
    }


    async function showLoder() {
        $('#grid-loader').addClass('d-flex').show();
    }

    async function hideLoder() {
        $('#grid-loader').removeClass('d-flex').hide();
    }

    function renderTable(data) {
        $("#salaryGrid").dxDataGrid({
            dataSource: data,
            showBorders: true,
            columnAutoWidth: true,
            columns: [
                { dataField: "id", caption: "ID", width: 80, cssClass: "text-center-cell", visible: false },
                { dataField: "employeeId", caption: "Employee ID", cssClass: "text-center-cell", visible: false },
                { dataField: "employeeCode", caption: "Employee Code", cssClass: "text-center-cell" },
                { dataField: "employeeName", caption: "Employee Name", cssClass: "text-center-cell" },
                { dataField: "fullName", caption: "Full Name", cssClass: "text-center-cell" },
                { dataField: "monthName", caption: "Month", cssClass: "text-center-cell" },
                { dataField: "year", caption: "Year", cssClass: "text-center-cell" },
                { dataField: "basicSalary", caption: "Basic Salary", cssClass: "text-center-cell" },
                { dataField: "hra", caption: "HRA", cssClass: "text-center-cell" },
                { dataField: "conveyanceAllowance", caption: "Conveyance", cssClass: "text-center-cell" },
                { dataField: "childEducationAllowance", caption: "Child Education", cssClass: "text-center-cell" },
                { dataField: "medicalAllowance", caption: "Medical", cssClass: "text-center-cell" },
                { dataField: "deputationAllowance", caption: "Deputation", cssClass: "text-center-cell"},
                { dataField: "grossSalary", caption: "Gross Salary", cssClass: "text-center-cell" },
                { dataField: "totalGrossSalary", caption: "Total Gross", cssClass: "text-center-cell" },
                { dataField: "pf", caption: "PF", cssClass: "text-center-cell" },
                { dataField: "esic", caption: "ESIC", cssClass: "text-center-cell" },
                { dataField: "professionalTax", caption: "Prof Tax", cssClass: "text-center-cell" },
                { dataField: "groupMedical", caption: "Group Medical", cssClass: "text-center-cell"},
                { dataField: "termInsurance", caption: "Term Insurance", cssClass: "text-center-cell"},
                { dataField: "lwf", caption: "LWF", cssClass: "text-center-cell" },
                { dataField: "tds", caption: "TDS", cssClass: "text-center-cell"},
                { dataField: "loan", caption: "Loan", cssClass: "text-center-cell" },
                { dataField: "totalDeductions", caption: "Total Deductions", cssClass: "text-center-cell"},
                { dataField: "netSalary", caption: "Net Salary", cssClass: "text-center-cell" },
                { dataField: "payableDays", caption: "Payable Days", cssClass: "text-center-cell" },
                { dataField: "monthDays", caption: "Month Days", cssClass: "text-center-cell" },
                { dataField: "holiday", caption: "Holidays", cssClass: "text-center-cell" },
                { dataField: "absentDays", caption: "Absent Days", cssClass: "text-center-cell" },
                { dataField: "presentDays", caption: "Present Days", cssClass: "text-center-cell" },
                { dataField: "weekOff", caption: "Week Off", cssClass: "text-center-cell" },
                { dataField: "leave", caption: "Leave", cssClass: "text-center-cell" },
                { dataField: "salaryDays", caption: "Salary Days", cssClass: "text-center-cell" },
                { dataField: "dateOfBirth", caption: "DOB", cssClass: "text-center-cell", dataType: "date", format: "dd/MM/yyyy" },
                { dataField: "dateOfJoining", caption: "DOJ", cssClass: "text-center-cell", dataType: "date", format: "dd/MM/yyyy" },
                { dataField: "primaryAccountNumber", caption: "Account No", cssClass: "text-center-cell" },
                { dataField: "primaryBankName", caption: "Bank Name", cssClass: "text-center-cell" },
                { dataField: "panNo", caption: "PAN No", cssClass: "text-center-cell" },
                { dataField: "uanNumber", caption: "UAN No", cssClass: "text-center-cell" },
                { dataField: "branchName", caption: "Branch", cssClass: "text-center-cell" },
                { dataField: "designationName", caption: "Designation", cssClass: "text-center-cell" },
                { dataField: "departmentName", caption: "Department", cssClass: "text-center-cell" },
                { dataField: "gradeName", caption: "Grade", cssClass: "text-center-cell" },
                { dataField: "createdDate", caption: "Created Date", cssClass: "text-center-cell", dataType: "date", format: "dd/MM/yyyy" }
            ]
        });
    }

    $('#btnGo').off('click').on('click', function () {
        var selectedMonth = $("#month").val();
        var selectedYear = $("#year").val();

        var isValid = true;

        // Validate Month
        if (selectedMonth === "") {
            $("#spnmonth").show();
            isValid = false;
        } else {
            $("#spnmonth").hide();
        }

        // Validate Year
        if (selectedYear === "") {
            $("#spnyear").show();
            isValid = false;
        } else {
            $("#spnyear").hide();
        }

        // If validation fails, stop here
        if (!isValid) {
            return;
        }

        showLoder();

        let model = {
            Month: parseInt(selectedMonth),
            Year: parseInt(selectedYear),
            EmployeeId: [parseInt(EmployeeId)]
        };

        $.ajax({
            url: '@(baseDomainUrl + "/api/MonthlySalaryDetailsAPI/GetSalarySlipReport")',
            type: 'POST',
            data: JSON.stringify(model),
            contentType: 'application/json',
            headers: {
                'Authorization': 'Bearer ' + Token
            },
            success: function (res) {
                console.log("data", res);
                if (res.isSuccess) {
                    renderTable(res.data);
                } else {
                    if (typeof round_error_noti === 'function') {
                        round_error_noti(res.responseMessage || 'No Data');
                    } else {
                        alert(res.responseMessage || 'No Data');
                    }
                }
            },
            error: function (xhr) {
                console.error("Error:", xhr);
                if (typeof round_error_noti === 'function') {
                    round_error_noti(xhr.responseJSON?.responseMessage || 'An error occurred. Please try again.');
                } else {
                    alert('An error occurred. Please try again.');
                }
            },
            complete: function () {
                hideLoder();
            }
        });
    });

    $("#btnClear").off('click').on('click', function () {
        // Clear form fields
        $('#month').val('');
        $('#year').val('');

        // Clear and dispose grid
        try {
            $("#salaryGrid").dxDataGrid("dispose");
        } catch (e) {
            // Ignore if grid doesn't exist
        }

        renderTable([]);

        // Hide error messages
        $("#spnmonth").hide();
        $("#spnyear").hide();
    });
</script>