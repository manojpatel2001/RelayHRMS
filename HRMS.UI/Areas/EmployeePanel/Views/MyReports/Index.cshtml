@{
    ViewData["Title"] = "Shift Changes Details";
    Layout = "~/Areas/EmployeePanel/Views/Shared/_EmployeeLayout.cshtml";
    string baseUrl = ViewBag.BaseUrl;
}

<link href="~/commoncss.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<style>
    .vertical-tab-menu {
        border-right: 1px solid #ccc;
        border-radius: 8px 0 0 8px;
        height: 100%;
    }

    .nav-link {
        font-weight: 500;
    }

    #favourite-tab {
        background-color: #d0e7ff !important;
        color: #007bff;
    }

    #attendance-tab {
        background-color: #c0ddff !important;
        color: #003e7f;
    }

    #leave-tab {
        background-color: #a5caff !important;
        color: #000;
    }

    .nav-link:hover {
        background-color: #b0d4ff;
        color: #0056b3;
    }

    .favourite-links,
    .attendance-links,
    .leave-links {
        display: none;
        padding: 10px 20px;
    }

        .favourite-links a,
        .attendance-links a,
        .leave-links a {
            display: block;
            text-decoration: none;
            color: #007bff;
            font-size: 14px;
            padding: 4px 0;
        }

            .favourite-links a:hover,
            .attendance-links a:hover,
            .leave-links a:hover {
                text-decoration: underline;
            }
</style>

<div class="card">
    <div class="card-header bg-transparent py-2">
        <div class="row">
            <div class="col-6">
                <h4 class="mb-0">Report Dashboard</h4>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-md-12 p-0">
                <div class="vertical-tab-menu h-100">
                    <ul class="nav flex-column nav-tabs p-3" id="reportTabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="favourite-tab" data-toggle="tab" href="#">Favourite Reports</a>
                        </li>
                        <div class="favourite-links">
                            <a href="@baseUrl/Reports/EmployeeInOutPresent">• Employee Inout Present</a>
                            <a href="@baseUrl/Reports/LateEarlySummary">• Late/Early Mark Summary</a>
                            <a href="@baseUrl/Reports/MobileInOutSummary">• Mobile Inout Summary</a>
                        </div>

                        <li class="nav-item">
                            <a class="nav-link" id="attendance-tab" data-toggle="tab" href="#">Attendance Reports</a>
                        </li>
                        <div class="attendance-links">
                            <a href="@baseUrl/Reports/AttendanceRegister">• Attendance Register</a>
                            <a href="@baseUrl/Reports/InOutSummary">• In-Out Summary</a>
                            <a href="@baseUrl/Reports/EmployeeInOutPresent">• Employee Inout Present</a>
                            <a href="@baseUrl/Reports/LateEarlySummary">• Late/Early Mark Summary</a>
                            <a href="@baseUrl/Reports/MobileInOutSummary">• Mobile Inout Summary</a>
                        </div>

                        <li class="nav-item">
                            <a class="nav-link" id="leave-tab" data-toggle="tab" href="#">Leave Reports</a>
                        </li>
                        <div class="leave-links">
                            <a href="#">• Leave Approval</a>
                            <a href="#">• Leave Balance</a>
                            <a href="#">• Yearly Leave Transaction</a>
                            <a href="#">• GatePass InOut</a>
                            <a href="#">• Comp-Off Leave Adjustment</a>
                            <a href="#">• Comp-Off Avail Balance</a>
                            <a href="#">• Leave Card</a>
                            <a href="#">• Leave Encash Slip</a>
                            <a href="#">• Leave Application Report</a>
                        </div>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        function showLinks(section) {
            $('.favourite-links, .attendance-links, .leave-links').hide(); // hide all first

            if (section === 'favourite') {
                $('.favourite-links').slideDown();
            } else if (section === 'attendance') {
                $('.attendance-links').slideDown();
            } else if (section === 'leave') {
                $('.leave-links').slideDown();
            }
        }

        // Show initial
        showLinks('favourite');

        // Click Events
        $('#favourite-tab').click(function () {
            $('.nav-link').removeClass('active');
            $(this).addClass('active');
            showLinks('favourite');
        });

        $('#attendance-tab').click(function () {
            $('.nav-link').removeClass('active');
            $(this).addClass('active');
            showLinks('attendance');
        });

        $('#leave-tab').click(function () {
            $('.nav-link').removeClass('active');
            $(this).addClass('active');
            showLinks('leave');
        });
    });
</script>
