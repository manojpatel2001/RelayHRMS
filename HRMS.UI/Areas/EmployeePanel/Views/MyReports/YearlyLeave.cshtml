<script>
    // Wait for all scripts to load
    $(document).ready(function() {
        // Check if DevExtreme is loaded
        if (typeof DevExpress === 'undefined') {
            console.error('DevExtreme not loaded!');
            alert('Error: DevExtreme library failed to load. Please refresh the page.');
            return;
        }

        console.log('DevExtreme loaded successfully');
        initializePage();
    });

    const savedCompany = localStorage.getItem('selectedCompany');
    var companyDetails = JSON.parse(savedCompany);
    const Compid = companyDetails.CompanyId;
    const EmployeeId = localStorage.getItem('EmployeeId');
    const Token = localStorage.getItem("authToken");

    function showLoder() {
        $('#grid-loader').addClass('d-flex').show();
    }

    function hideLoder() {
        $('#grid-loader').removeClass('d-flex').hide();
    }

    function setDefaultDates() {
        // For current year (2025) start and end dates
        const currentYear = new Date().getFullYear(); // Gets the current year (2025)
        const startDate = `${currentYear}-01-01`; // January 1, 2025
        const endDate = `${currentYear}-12-31`; // December 31, 2025

        // Set the values of the input fields
        $("#fromdate").val(startDate);
        $("#todate").val(endDate);
    }

    function loadGrid(data) {
        console.log('API Data:', data);

        if (!$.fn.dxDataGrid) {
            console.error('dxDataGrid not available');
            alert('Error: Grid component not loaded. Please refresh the page.');
            return;
        }

        // Transform data for proper grouping
        const transformedData = transformDataForGrid(data);
        console.log('Transformed Data:', transformedData);

        // Clear existing grid
        try {
            const gridInstance = $("#YearlyleaveGrid").dxDataGrid("instance");
            if (gridInstance) {
                gridInstance.dispose();
            }
        } catch (e) {
            console.log('No existing grid');
        }
        $("#YearlyleaveGrid").empty();

        // Initialize grid with all columns
        $("#YearlyleaveGrid").dxDataGrid({
            dataSource: transformedData,
            keyExpr: 'id',
            showBorders: true,
            showColumnHeaders: true,
            showColumnLines: true,
            showRowLines: true,
            rowAlternationEnabled: false,
            hoverStateEnabled: true,
            columnAutoWidth: false,
            wordWrapEnabled: false,
            height: 'auto',
            width: '100%',
            scrolling: {
                mode: 'standard',
                useNative: false,
                showScrollbar: 'always'
            },
         
            headerFilter: {
                visible: false
            },
            filterRow: {
                visible: false
            },
            columns: [
                {
                    dataField: 'location',
                    caption: 'Location',
                    width: 100,
                    alignment: 'left',
                    allowHiding: false,
                    cellTemplate: function(container, options) {
                        if (options.data.showEmployee) {
                            container.text(options.value || '-');
                            container.css('font-weight', '500');
                        }
                    }
                },
                {
                    dataField: 'name',
                    caption: 'Name',
                    width: 180,
                    alignment: 'left',
                    allowHiding: false,
                    cellTemplate: function(container, options) {
                        if (options.data.showEmployee) {
                            container.text(options.value || '-');
                            container.css('font-weight', '500');
                        }
                    }
                },
                {
                    dataField: 'doj',
                    caption: 'DOJ',
                    width: 100,
                    alignment: 'center',
                    allowHiding: false,
                    cellTemplate: function(container, options) {
                        if (options.data.showEmployee && options.value) {
                            const date = new Date(options.value);
                            const day = String(date.getDate()).padStart(2, '0');
                            const months = ['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nov','Dec'];
                            const month = months[date.getMonth()];
                            const year = String(date.getFullYear()).substr(-2);
                            container.text(`${day}-${month}-${year}`);
                            container.css('font-weight', '500');
                        }
                    }
                },
                {
                    dataField: 'leaveType',
                    caption: 'Leave',
                    width: 80,
                    alignment: 'center',
                    allowHiding: false,
                    cellTemplate: function(container, options) {
                        if (options.data.showLeave) {
                            container.text(options.value || '-');
                            container.css('font-weight', '600');
                        }
                    }
                },
                {
                    dataField: 'opening',
                    caption: 'Opening',
                    width: 80,
                    alignment: 'center',
                    allowHiding: false,
                    cellTemplate: function(container, options) {
                        if (options.data.showLeave) {
                            const val = options.value !== null && options.value !== undefined ? options.value : '-';
                            container.text(val);
                        }
                    }
                },
                {
                    dataField: 'rowType',
                    caption: 'Type',
                    width: 80,
                    alignment: 'center',
                    allowHiding: false,
                    cellTemplate: function(container, options) {
                        container.text(options.value || '-');
                        if (options.value === 'Closing') {
                            container.css('font-weight', '600');
                        }
                    }
                },
                {
                    dataField: 'jan',
                    caption: 'Jan',
                    width: 60,
                    alignment: 'center',
                    allowHiding: false,
                    cellTemplate: formatCell
                },
                {
                    dataField: 'feb',
                    caption: 'Feb',
                    width: 60,
                    alignment: 'center',
                    allowHiding: false,
                    cellTemplate: formatCell
                },
                {
                    dataField: 'mar',
                    caption: 'Mar',
                    width: 60,
                    alignment: 'center',
                    allowHiding: false,
                    cellTemplate: formatCell
                },
                {
                    dataField: 'apr',
                    caption: 'Apr',
                    width: 60,
                    alignment: 'center',
                    allowHiding: false,
                    cellTemplate: formatCell
                },
                {
                    dataField: 'may',
                    caption: 'May',
                    width: 60,
                    alignment: 'center',
                    allowHiding: false,
                    cellTemplate: formatCell
                },
                {
                    dataField: 'jun',
                    caption: 'Jun',
                    width: 60,
                    alignment: 'center',
                    allowHiding: false,
                    cellTemplate: formatCell
                },
                {
                    dataField: 'jul',
                    caption: 'Jul',
                    width: 60,
                    alignment: 'center',
                    allowHiding: false,
                    cellTemplate: formatCell
                },
                {
                    dataField: 'aug',
                    caption: 'Aug',
                    width: 60,
                    alignment: 'center',
                    allowHiding: false,
                    cellTemplate: formatCell
                },
                {
                    dataField: 'sep',
                    caption: 'Sep',
                    width: 60,
                    alignment: 'center',
                    allowHiding: false,
                    cellTemplate: formatCell
                },
                {
                    dataField: 'oct',
                    caption: 'Oct',
                    width: 60,
                    alignment: 'center',
                    allowHiding: false,
                    cellTemplate: formatCell
                },
                {
                    dataField: 'nov',
                    caption: 'Nov',
                    width: 60,
                    alignment: 'center',
                    allowHiding: false,
                    cellTemplate: formatCell
                },
                {
                    dataField: 'dec',
                    caption: 'Dec',
                    width: 60,
                    alignment: 'center',
                    allowHiding: false,
                    cellTemplate: formatCell
                },
                {
                    dataField: 'closing',
                    caption: 'Closing',
                    width: 80,
                    alignment: 'center',
                    allowHiding: false,
                    cellTemplate: function(container, options) {
                        const val = options.value !== null && options.value !== undefined ? options.value : '-';
                        container.text(val);
                        if (options.data.rowType === 'Closing') {
                            container.css('font-weight', '600');
                        }
                    }
                }
            ],
            onRowPrepared: function(e) {
                if (e.rowType === 'data') {
                    if (e.data.showEmployee) {
                        e.rowElement.css({
                            'background-color': '#f5f5f5',
                            'border-top': '2px solid #999'
                        });
                    } else if (e.data.rowType === 'Closing') {
                        e.rowElement.css('background-color', '#fff3cd');
                    }
                }
            },
            onContentReady: function() {
                // Force headers visible
                setTimeout(() => {
                    $('#YearlyleaveGrid .dx-datagrid-headers').show().css({
                        'display': 'table-header-group !important',
                        'visibility': 'visible !important'
                    });
                }, 50);
            }
        });
    }

    function formatCell(container, options) {
        const val = options.value !== null && options.value !== undefined ? options.value : '-';
        container.text(val);
    }

    function transformDataForGrid(apiData) {
        if (!apiData || !Array.isArray(apiData) || apiData.length === 0) {
            return [];
        }

        const result = [];
        const employeeGroups = new Map();
        let rowId = 0;

        // Group by employee
        apiData.forEach(item => {
            const empKey = `${item.name.trim()}_${item.location || 'NA'}`;

            if (!employeeGroups.has(empKey)) {
                employeeGroups.set(empKey, {
                    location: item.location,
                    name: item.name,
                    doj: item.doj,
                    leaveTypes: new Map()
                });
            }

            const emp = employeeGroups.get(empKey);
            const leaveType = item.leaveType;

            if (!emp.leaveTypes.has(leaveType)) {
                emp.leaveTypes.set(leaveType, []);
            }

            emp.leaveTypes.get(leaveType).push(item);
        });

        // Convert to flat structure
        employeeGroups.forEach((empData) => {
            let firstRowForEmployee = true;

            empData.leaveTypes.forEach((leaveRows, leaveType) => {
                // Get opening value from first row of this leave type
                const openingValue = leaveRows.find(r => r.opening !== null)?.opening;

                let firstRowForLeave = true;

                leaveRows.forEach(row => {
                    result.push({
                        id: ++rowId,
                        location: empData.location,
                        name: empData.name,
                        doj: empData.doj,
                        leaveType: leaveType,
                        opening: openingValue,
                        rowType: row.rowType,
                        jan: row.jan,
                        feb: row.feb,
                        mar: row.mar,
                        apr: row.apr,
                        may: row.may,
                        jun: row.jun,
                        jul: row.jul,
                        aug: row.aug,
                        sep: row.sep,
                        oct: row.oct,
                        nov: row.nov,
                        dec: row.dec,
                        closing: row.closing,
                        showEmployee: firstRowForEmployee,
                        showLeave: firstRowForLeave
                    });

                    firstRowForEmployee = false;
                    firstRowForLeave = false;
                });
            });
        });

        return result;
    }
    function initializePage() {
            setDefaultDates();
        // Attach event handlers after page loads
        $('#btnGo').off('click').on('click', function () {
            var txtformdate = $("#fromdate").val();
            var txttodate = $("#todate").val();
            var isValid = true;

        if (txtformdate === "") {
            $("#spnfromdate").show();
            isValid = false;
        } else {
            $("#spnfromdate").hide();
        }

        if (txttodate === "") {
            $("#spntodate").show();
            isValid = false;
        } else {
            $("#spntodate").hide();
        }

        if (txtformdate && txttodate && new Date(txtformdate) > new Date(txttodate)) {
            $("#spntodate").text("To Date must be greater than or equal to From Date").show();
            isValid = false;
        }

        if (!isValid) {
            return;
        }

        showLoder();

        let model = {
            EmpId: parseInt(EmployeeId),
            StartDate: txtformdate,
            EndDate: txttodate
        };

        $.ajax({
            url: '@(baseDomainUrl + "/api/LeaveApplication/GetYearlyLeaveReport")',
            type: 'POST',
            data: JSON.stringify(model),
            contentType: 'application/json',
            headers: {
                'Authorization': 'Bearer ' + Token
            },
            success: function (res) {
                console.log("data", res);
                if (res.isSuccess) {
                    loadGrid(res.data);
                } else {
                    if (typeof round_error_noti === 'function') {
                        round_error_noti(res.responseMessage || 'No Data');
                    } else {
                        alert(res.responseMessage || 'No Data');
                    }
                }
            },
            error: function (xhr) {
                console.error("Error:", xhr);
                if (typeof round_error_noti === 'function') {
                    round_error_noti(xhr.responseJSON?.responseMessage || 'An error occurred. Please try again.');
                } else {
                    alert('An error occurred. Please try again.');
                }
            },
            complete: function () {
                hideLoder();
            }
        });
    });

    $("#btnClear").off('click').on('click', function () {
        $('#fromdate').val('');
        $('#todate').val('');

        // Safely dispose grid
        try {
            const gridInstance = $("#YearlyleaveGrid").dxDataGrid("instance");
            if (gridInstance) {
                gridInstance.dispose();
            }
        } catch (e) {
            console.log('No grid to clear');
        }

        $("#YearlyleaveGrid").empty();

        $("#spnfromdate").hide();
        $("#spntodate").hide();
    });
    } // End of initializePage
</script>