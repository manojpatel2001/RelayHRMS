    // Function to process data for grouping
    function processDataForGrouping(data) {
        if (!data || !Array.isArray(data) || data.length === 0) {
            return [];
        }

        const result = [];
        const employeeGroups = {};

        // Group data by employee (using name + location as unique key)
        data.forEach(item => {
            const key = `${item.name.trim()}_${item.location || ''}`;
            if (!employeeGroups[key]) {
                employeeGroups[key] = {
                    employee: {
                        name: item.name,
                        location: item.location,
                        doj: item.doj
                    },
                    leaveData: {}
                };
            }

            // Group by leave type and transaction type
            const leaveKey = `${item.leaveType}_${item.transactionType}`;
            if (!employeeGroups[key].leaveData[leaveKey]) {
                employeeGroups[key].leaveData[leaveKey] = item;
            }
        });

        // Create the final structure
        Object.keys(employeeGroups).forEach(employeeKey => {
            const group = employeeGroups[employeeKey];
            let isFirstRowForEmployee = true;

            // Group leave data by leave type
            const leaveTypeGroups = {};
            Object.keys(group.leaveData).forEach(leaveKey => {
                const item = group.leaveData[leaveKey];
                if (!leaveTypeGroups[item.leaveType]) {
                    leaveTypeGroups[item.leaveType] = [];
                }
                leaveTypeGroups[item.leaveType].push(item);
            });

            // Add rows for each leave type
            Object.keys(leaveTypeGroups).forEach(leaveType => {
                leaveTypeGroups[leaveType].forEach(leaveItem => {
                    result.push({
                        ...leaveItem,
                        isFirstRowForEmployee: isFirstRowForEmployee,
                        employeeName: group.employee.name,
                        employeeLocation: group.employee.location,
                        employeeDoj: group.employee.doj
                    });
                    isFirstRowForEmployee = false;
                });
            });
        });

        return result;
    }

