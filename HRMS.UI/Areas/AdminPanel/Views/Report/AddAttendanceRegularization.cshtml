@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Attendance Reosrts";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
    string baseUrl = Configuration["BaseUrlSettings:baseUrl"];
    var uri = new Uri(baseUrl);
    string baseDomainUrl = $"{uri.Scheme}://{uri.Host}:{uri.Port}";
}


<!-- Page Title -->
<title>Employee Attendance Regularization Request</title>

<!-- Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .panel-header {
        background-color: #3e4b6d;
        color: white;
        font-weight: bold;
        padding: 10px 15px;
        font-size: 16px;
        border-radius: 4px 4px 0 0;
    }

    .form-section {
        border: 1px solid #ccc;
        border-top: none;
        padding: 20px;
        font-size: 14px;
    }

    .form-label {
        font-size: 13px;
        font-weight: 500;
        white-space: nowrap;
    }

    .form-select,
    .form-control {
        font-size: 13px;
        padding: 5px 8px;
    }

    .btn-custom {
        background-color: #3e4b6d;
        color: white;
        font-size: 13px;
        font-weight: bold;
        border: none;
        padding: 6px 18px;
        margin-right: 10px;
    }

        .btn-custom:hover {
            background-color: #2c3752;
        }

    .no-records {
        padding: 10px;
        font-size: 14px;
        color: #666;
    }

    .back-btn {
        float: right;
        margin-top: 10px;
    }
</style>

<!-- Panel Header -->
<div class="panel-header">
    EMPLOYEE ATTENDANCE REGULARIZATION REQUEST
</div>

<!-- Form Section -->
<div class="form-section">
    <form>
        <div class="row mb-3">
            <!-- Branch -->
            <div class="col-md-4 d-flex align-items-center">
                <label class="form-label me-2" style="width: 100px;">Branch :</label>
                <select class="form-select form-select-sm w-50">
                    <option>Bhagalpur</option>
                    <!-- Add more branches if needed -->
                </select>
            </div>

            <!-- Month & Year -->
            <div class="col-md-4 d-flex align-items-center">
                <label class="form-label me-2" style="width: 60px;">Month :</label>
                <select class="form-select form-select-sm me-2" style="width: 100px;">
                    <option>July</option>
                    <!-- Add months -->
                </select>
                <label class="form-label me-2" style="width: 40px;">Year :</label>
                <select class="form-select form-select-sm" style="width: 100px;">
                    <option>2025</option>
                    <!-- Add years -->
                </select>
            </div>

            <!-- Record Type -->
            <div class="col-md-4 d-flex align-items-center">
                <label class="form-label me-2" style="width: 90px;">Record Type :</label>
                <select class="form-select form-select-sm w-50">
                    <option>Regularize</option>
                    <!-- Add types if any -->
                </select>
            </div>
        </div>

        <!-- Employee Code/Name and Employee dropdown -->
        <div class="row mb-3">
            <div class="col-md-6 d-flex align-items-center">
                <label class="form-label me-2" style="width: 160px;">Employee Code/Name :</label>
                <input type="text" class="form-control form-control-sm w-50" placeholder="Employee Code or Name" />
            </div>
            <div class="col-md-6 d-flex align-items-center">
                <label class="form-label me-2" style="width: 100px;">Employee <span class="text-danger">*</span> :</label>
                <select class="form-select form-select-sm w-50">
                    <option>--Select Employee--</option>
                    <!-- Dynamically loaded -->
                </select>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="row">
            <div class="col-md-12 d-flex justify-content-center">
                <button type="button" class="btn btn-custom">Go</button>
                <button type="button" class="btn btn-custom">Clear</button>
            </div>
        </div>
    </form>
</div>

<!-- No Records Message -->
<div class="no-records">
    No Records Found.
</div>

<!-- Back Button -->
<div class="back-btn">
    <button type="button" class="btn btn-custom">Back</button>
</div>
