    /* Searchable Dropdown CSS - Add this to your existing styles */
    .select-wrapper {
        position: relative;
        width: 100%;
    }

    .custom-select-display {
        width: 100%;
        padding: 8px 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 14px;
        cursor: pointer;
        background-color: white;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .custom-select-display:focus {
            outline: none;
            border-color: #2395c6;
        }

        .custom-select-display .arrow {
            transition: transform 0.3s;
        }

        .custom-select-display.active .arrow {
            transform: rotate(180deg);
        }

    .search-dropdown {
        display: none;
        position: absolute;
        width: 100%;
        background-color: white;
        border: 1px solid #2395c6;
        z-index: 1000;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

        .search-dropdown.active {
            display: block;
        }

    .search-input-wrapper {
        padding: 8px;
        border-bottom: 1px solid #eee;
    }

    .dropdown-search-input {
        width: 100%;
        padding: 8px 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 14px;
    }

    .dropdown-items {
        max-height: 250px;
        overflow-y: auto;
    }

    .dropdown-option {
        padding: 10px 12px;
        cursor: pointer;
        border-bottom: 1px solid #eee;
    }

        .dropdown-option:hover {
            background-color: #2395c6;
            color: white;
        }

        .dropdown-option.selected {
            background-color: #e3f2fd;
        }

        .dropdown-option.highlighted {
            background-color: #2395c6;
            color: white;
        }
    .no-results {
        padding: 10px 12px;
        color: #999;
        text-align: center;
    }
