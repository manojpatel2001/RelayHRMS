@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Employee Increment";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
    string baseUrl = Configuration["BaseUrlSettings:baseUrl"];
}

<div class="card">
    <div class="card-header bg-transparent py-2">
        <div class="row">
            <div class="col-6">
                <h5 class="pt-2 mb-0">Bulk Increment</h5>
            </div>
        </div>
    </div>

    <div class="card-body">
        <form>
            <div class="col-md-10 mx-auto">

                <!-- Row 1 -->
                <div class="row mb-3 align-items-center">
                    <div class="col-md-6 d-flex align-items-center">
                        <label for="effectivedateid" class="me-2 mb-0" style="width: 100px;">Effective Date:</label>
                        <input type="date" class="form-control form-control-sm" id="effectivedateid">
                    </div>
                    <div class="col-md-6 d-flex align-items-center">
                        <label for="branchid" class="me-2 mb-0" style="width: 100px;">Branch:</label>
                        <select class="form-control form-control-sm" id="branchid">
                            <option value="0">-- Select --</option>
                            <option value="1">GKP</option>
                            <option value="2">Head Office</option>
                            <option value="3">UP</option>
                        </select>
                    </div>
                </div>

                <!-- Row 2 -->
                <div class="row mb-3 align-items-center">
                    <div class="col-md-6 d-flex align-items-center">
                        <label for="gradeid" class="me-2 mb-0" style="width: 100px;">Grade:</label>
                        <select class="form-control form-control-sm" id="gradeid">
                            <option value="0">-- Select --</option>
                            <option value="1">MANAGEMENT</option>
                        </select>
                    </div>
                    <div class="col-md-6 d-flex align-items-center">
                        <label for="designationid" class="me-2 mb-0" style="width: 100px;">Designation:</label>
                        <select class="form-control form-control-sm" id="designationid">
                            <option value="0">-- Select --</option>
                            <option value="1">MANAGER</option>
                        </select>
                    </div>
                </div>

                <!-- Row 3 -->
                <div class="row mb-3 align-items-center">
                    <div class="col-md-6 d-flex align-items-center">
                        <label for="departmentid" class="me-2 mb-0" style="width: 100px;">Department:</label>
                        <select class="form-control form-control-sm" id="departmentid">
                            <option value="0">-- Select --</option>
                            <option value="1">CRM</option>
                        </select>
                    </div>
                    <div class="col-md-6 d-flex align-items-center">
                        <label for="typeid" class="me-2 mb-0" style="width: 100px;">Emp Type:</label>
                        <select class="form-control form-control-sm" id="typeid">
                            <option value="0">-- Select --</option>
                        </select>
                    </div>
                </div>

                <!-- Row 4 -->
                <div class="row mb-3 align-items-center">
                    <div class="col-md-6 d-flex align-items-center">
                        <label for="employeeid" class="me-2 mb-0" style="width: 100px;">Employee:</label>
                        <select class="form-control form-control-sm" id="employeeid">
                            <option value="0">-- Select Employee --</option>
                        </select>
                    </div>
                    <div class="col-md-6 d-flex align-items-center">
                        <label for="reasonid" class="me-2 mb-0" style="width: 100px;">Reason:</label>
                        <select class="form-control form-control-sm" id="reasonid">
                            <option value="0">-- Select --</option>
                            <option value="1">Add Other Allowance</option>
                            <option value="2">Department Change</option>
                            <option value="3">Designation Change</option>
                            <option value="4">Increment</option>
                            <option value="5">Internal Transfer</option>
                            <option value="6">New Joining</option>
                            <option value="7">PF Calculation</option>
                            <option value="8">Probation To Confirmation</option>
                            <option value="9">Promotion</option>
                            <option value="10">Revised Salary Structure</option>
                        </select>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>


<div class="card">
    <div class="card-header bg-transparent ml-0 py-0">
        <div class="row">
            <div class="col-6">
                <h5 class="pt-2 mb-0">
                    INCREMENT DETAILS
                </h5>
            </div>
        </div>


        <div class="card">
            <div class="card-body">
                <form>
                    <div class="col-md-10 mx-auto">

                        <!-- Row 1 -->
                        <div class="row mb-3 align-items-center">
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="modeid" class="me-2 mb-0" style="width: 100px;">Increment Mode:</label>
                                <select class="form-control form-control-sm" id="modeid">
                                    <option value="0">%</option>
                                    <option value="1">ATM</option>
                                </select>
                            </div>

                            <div class="col-md-6 d-flex align-items-center">
                                <label for="basicid" class="me-2 mb-0" style="width: 100px;">Basic:</label>
                                <input type="text" class="form-control form-control-sm" id="basicid">
                            </div>
                        </div>

                        <!-- Row 2 -->
                        <div class="row mb-3 align-items-center">
                            <div class="col-md-6 d-flex align-items-center">
                                <label for="ctcid" class="me-2 mb-0" style="width: 100px;">CTC:</label>
                                <input type="text" class="form-control form-control-sm" id="ctcid">
                            </div>

                            <div class="col-md-6 d-flex align-items-center">
                                <label for="grossid" class="me-2 mb-0" style="width: 100px;">Gross:</label>
                                <input type="text" class="form-control form-control-sm" id="grossid">
                            </div>
                        </div>

                    </div>
                </form>

                <!-- Buttons -->
                <div class="d-flex justify-content-center gap-3 mt-3">
                    <button type="button" class="btn btn-primary" id="gobutoonid">GO</button>
                    <button type="button" class="btn btn-secondary" id="clearbuttonid">Clear</button>
                </div>
            </div>
        </div>

    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>


