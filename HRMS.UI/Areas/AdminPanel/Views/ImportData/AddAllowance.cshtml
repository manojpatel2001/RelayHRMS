@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Import Data";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
    string baseUrl = Configuration["BaseUrlSettings:baseUrl"];
}

<style>
    .form-section {
        border: 1px solid #ccc;
        padding: 20px;
        margin-top: 10px;
    }

    .form-label-fixed {
        width: 150px;
        display: inline-block;
    }

    .btn-custom {
        background-color: #3e4b6d;
        color: white;
        border: none;
        font-weight: bold;
        padding: 5px 20px;
    }

        .btn-custom:hover {
            background-color: #2c3752;
        }

    .text-end-custom {
        text-align: right;
    }
</style>

<div class="container mt-3">
    <div class="form-section">
        <div class="row">
            <!-- Left Column -->
            <div class="col-md-6">
                <div class="form-group mb-2">
                    <label class="form-label-fixed">Month<span style="color:red">*</span> :</label>
                    <select class="form-control form-control-sm d-inline-block w-50" id="ddlMonth">
                        <option>June</option>
                    </select>
                </div>

                <div class="form-group mb-2">
                    <label class="form-label-fixed">Grade :</label>
                    <select class="form-control form-control-sm d-inline-block w-50" id="ddlGrade">
                        <option>--Select--</option>
                    </select>
                </div>

                <div class="form-group mb-2">
                    <label class="form-label-fixed">Department :</label>
                    <select class="form-control form-control-sm d-inline-block w-50" id="ddlDepartment">
                        <option>--Select--</option>
                    </select>
                </div>

                <div class="form-group mb-2">
                    <label class="form-label-fixed">Employee :</label>
                    <select class="form-control form-control-sm d-inline-block w-50" id="ddlEmployee">
                        <option>--Select Employee--</option>
                    </select>
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-md-6">
                <div class="form-group mb-2">
                    <label class="form-label-fixed">Year<span style="color:red">*</span> :</label>
                    <select class="form-control form-control-sm d-inline-block w-50" id="ddlYear">
                        <option>2025</option>
                    </select>
                </div>

                <div class="form-group mb-2">
                    <label class="form-label-fixed">Branch :</label>
                    <select class="form-control form-control-sm d-inline-block w-50" id="ddlBranch">
                        <option>--Select--</option>
                    </select>
                </div>

                <div class="form-group mb-2">
                    <label class="form-label-fixed">Designation :</label>
                    <select class="form-control form-control-sm d-inline-block w-50" id="ddlDesignation">
                        <option>--Select--</option>
                    </select>
                </div>

                <div class="form-group mb-2">
                    <label class="form-label-fixed">Allowance<span style="color:red">*</span> :</label>
                    <select class="form-control form-control-sm d-inline-block w-50" id="ddlAllowance">
                        <option>GladAmt</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Button Row -->
        <div class="row mt-3">
            <div class="col-md-12 text-center">
                <button class="btn btn-custom me-2" id="btnGo">Go</button>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-12 text-end-custom">
                <button class="btn btn-secondary" id="btnBack">Back</button>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('#btnBack').click(function () {
            history.back();
        });
    });
</script>
