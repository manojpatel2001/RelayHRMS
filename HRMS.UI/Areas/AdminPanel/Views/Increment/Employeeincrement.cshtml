			$('#grid-loader').addClass('d-flex').show();
			 $.ajax({
				type: "GET",
				 url: '@baseUrl/EmployeeIncrementAPI/GetAllIncrementEmployees/'+CompanyId,
				headers: {
						'Authorization': 'Bearer ' + Token
					},
				 success: function (data) {
						$("#GridContainer").dxDataGrid({
