							columns: [
								{ dataField: 'employeeCode', caption: 'Employee Code' },
								{ dataField: 'fullName', caption: 'Employee Name' },
								{ dataField: 'oldBasicSalary', caption: 'Old Basic Salary', format: { type: 'fixedPoint', precision: 2 } },
									{ dataField: 'oldGrossSalary', caption: 'Old Gross Salary', format: { type: 'fixedPoint', precision: 2 } },

								{ dataField: 'newBasicSalary', caption: 'New Basic Salary', format: { type: 'fixedPoint', precision: 2 } },
								{ dataField: 'newGrossSalary', caption: 'New Gross Salary', format: { type: 'fixedPoint', precision: 2 } },
								{
									dataField: 'effectiveFromDate',
									caption: 'Effective Date',
									dataType: 'date',
									format: 'dd-MM-yyyy' 
								},
								{ dataField: 'reason', caption: 'Reason' }
									  

								   // {
									  //  dataField: '',
