     async function employeeBind() {
        const branchId = $("#ddlBranch").val();
          if(!branchId)
          {
              return;
          }

            $.ajax({
             url: '@baseDomainUrl/api/EmployeeMasterAPI/GetEmployeeByBranchId/'+branchId,
             method: 'GET',
                 headers: {
                     'Authorization': 'Bearer ' + Token
                 },
             success: function(data) {
                 if(data.isSuccess){
                     var dropdown = $('#ddlEmployee');
                     dropdown.empty();
                     dropdown.append('<option disabled selected value="">Select </option>');
                     $.each(data.data, function(index, employee) {
                         dropdown.append($('<option>', {
                             value: employee.id,
                             text: employee.fullName+" - "+employee.employeeCode
                         }));
                     });


                 }
             },
             error: function(error) {
                 console.error('Error fetching employee data:', error);
             }
         });
    }

