        function handleSingleInput(currentInput, currentId) {
            // Reset all inputs to 0
            $('#basic').val('0');
            $('#gross').val('0');
            $('#ctc').val('0');

            // Set the value for the current input
            $('#' + currentId).val($(currentInput).val());
               const isPercentageMode = $('input[name="incrementMode"]:checked').val() === 'percentage';
               if(isPercentageMode)
               {
                      if (parseFloat($(this).val()) > 100) {
                          $(this).val('100');

                      }
               }
            // Recalculate salary
            calculateNewSalary();
        }

       function toggleInputMode() {

          // Reset values to 0
          $('#basic').val("0");
          $('#gross').val("0");
          $('#ctc').val("0");

         
      }
     

    function calculateNewSalary() {
        const isPercentageMode = $('input[name="incrementMode"]:checked').val() === 'percentage';

        if (isPercentageMode) {
            const basicPercent = parseFloat($('#basic').val()) || 0;
            const grossPercent = parseFloat($('#gross').val()) || 0;
            const ctcPercent = parseFloat($('#ctc').val()) || 0;

              const currentBasic = parseFloat($('#basicSalary').val()) || 0;
              const currentGross = parseFloat($('#grossSalary').val()) || 0;
              const currentCTC = parseFloat($('#ctcSalary').val()) || 0;

             

              $('#newBasicSalary').val((currentBasic * (1 + basicPercent / 100)).toFixed(2));
            $('#newGrossSalary').val((currentGross * (1 + grossPercent / 100)).toFixed(2));
              $('#newctcSalary').val((currentCTC * (1 + ctcPercent / 100)).toFixed(2));
        }
        else {
          // Amount mode: Directly add the amount to current values
          const basicAmount = parseFloat($('#basic').val()) || 0;
          const grossAmount = parseFloat($('#gross').val()) || 0;
          const ctcAmount = parseFloat($('#ctc').val()) || 0;

          const currentBasic = parseFloat($('#basicSalary').val()) || 0;
          const currentGross = parseFloat($('#grossSalary').val()) || 0;
          const currentCTC = parseFloat($('#ctcSalary').val()) || 0;

          $('#newBasicSalary').val((currentBasic + basicAmount).toFixed(2));
          $('#newGrossSalary').val((currentGross + grossAmount).toFixed(2));
          $('#newctcSalary').val((currentCTC + ctcAmount).toFixed(2));
      }
    }



