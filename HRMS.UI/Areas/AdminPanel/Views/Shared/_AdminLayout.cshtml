    margin-top: 10px;
    font-size: 18px;
    color: #333;
    }

    /* Spinner animation */
    @@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
    }

        .dropdown-submenu {
