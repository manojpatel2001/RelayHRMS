        }

        .tab {
            padding: 15px 25px;
            cursor: pointer;
            border: none;
            background: transparent;
            font-size: 14px;
            white-space: nowrap;
            transition: all 0.3s;
            border-bottom: 3px solid transparent;
        }

            .tab:hover {
                background: #e9ecef;
            }

            .tab.active {
                color: #d81b60;
                border-bottom-color: #d81b60;
                font-weight: bold;
            }

        .tab-content {
            display: none;
            padding: 30px;
            animation: fadeIn 0.3s;
        }

            .tab-content.active {
                display: block;
            }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
        }

        to {
            opacity: 1;
        }

        }

        .form-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
        }

            .form-row.cols-3 {
                grid-template-columns: repeat(3, 1fr);
            }

            .form-row.cols-2 {
                grid-template-columns: repeat(2, 1fr);
            }

        .form-group {
            display: flex;
            flex-direction: column;
        }

            .form-group.full-width {
                grid-column: 1 / -1;
            }

        label {
            margin-bottom: 5px;
            font-size: 14px;
            color: #333;
            font-weight: 500;
        }

        input, select, textarea {
