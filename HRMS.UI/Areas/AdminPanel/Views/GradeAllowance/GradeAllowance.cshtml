@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Employee Increment";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
    string baseUrl = Configuration["BaseUrlSettings:baseUrl"];
}

<link href="~/commoncss.css" rel="stylesheet" />

<style>
    
    .fixed-label {
        min-width: 120px;
        white-space: nowrap;
        margin-bottom: 0;
        margin-right: 10px;
        text-align: right;
    }

</style>


<div class="card">
    <div class="card-header bg-transparent ml-0 py-0">

        <div class="card">
            <div class="card-header bg-transparent">
                <div class="row align-items-center">
                    <div class="col">
                        <h5 class="pt-2 mb-0">
                            GRADE WISE ALLOWANCE
                        </h5>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <form>
                    <div class="col-md-6 mx-auto">

                        <!-- Branch -->
                        <div class="mb-2 d-flex align-items-center">
                            <label for="branchid" class="form-label fixed-label">Branch:</label>
                            <select class="form-control form-control-sm compact-control" id="branchid">
                                <option value="0">--Select--</option>
                                <option value="1">GKP</option>
                                <option value="2">Head Office</option>
                                <option value="3">UP</option>
                            </select>
                        </div>

                        <!-- Grade -->
                        <div class="mb-2 d-flex align-items-center">
                            <label for="gradeid" class="form-label fixed-label">Grade:</label>
                            <select class="form-control form-control-sm compact-control" id="gradeid">
                                <option value="0">--All Grade--</option>
                                <option value="1">--MANAGEMENT--</option>
                            </select>
                        </div>

                        <!-- Allowances -->
                        <div class="mb-2 d-flex align-items-center">
                            <label for="allowancesid" class="form-label fixed-label">Allowances:</label>
                            <select class="form-control form-control-sm compact-control" id="allowancesid">
                                <option value="0">--Select Allowances--</option>
                            </select>
                        </div>

                        <!-- Exists in Employee Checkbox (on new line) -->
                        <div class="mb-2 d-flex align-items-center">
                            <label class="form-label fixed-label"></label>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="checkboxid">
                                <label class="form-check-label" for="checkboxid">Exists In Employee</label>
                            </div>
                        </div>

                        <!-- Employee Status -->
                        <div class="mb-3 d-flex align-items-center">
                            <label for="activeid" class="form-label fixed-label">Employee Status:</label>
                            <select class="form-control form-control-sm compact-control" id="activeid">
                                <option value="0">--Active--</option>
                                <option value="1">--Left--</option>
                            </select>
                        </div>

                        <!-- Button -->
                        <div class="text-center">
                            <button type="button" class="btn btn-primary">GO</button>
                        </div>

                    </div>
                </form>
            </div>

           
        </div>
    </div>
</div>
