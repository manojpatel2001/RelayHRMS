    // Open edit modal
    async function openEditModal(schemeId) {
        try {
            $('#btnSave').prop('disabled', true).text('Loading...');
            const response = await $.ajax({
                url: `@baseUrl/ApprovalManagementAPI/GetAllApprovalSchemeLevelsBySchemeId/${schemeId}`,
                method: 'GET',
                headers: {
                    'Authorization': 'Bearer ' + Token
                }
            });
            if (response.isSuccess) {
                const levelsData = response.data;
                $('.formType').text('Edit');
                $('#drpScheme').data('searchableSelect').setValue(schemeId);
                $('#dynamicLevelsContainer').empty();
                approvalLevelsData = {};

                levelsData.forEach(level => {
                    const levelNo = level.sequenceNo;
                    approvalLevelsData[levelNo] = {
                        levelNo: levelNo,
                        approvalSchemeLevelId: level.approvalSchemeLevelId || 0,
                        approvals: [],
                        isDepartmentBased: level.isDepartmentBased,
                        departmentApprovals: [],
                        escalationDays: level.escalationDays,
                        skipDays: level.skipDays,
                        isNotMandatory: level.isNotMandatory,
                        isFilled: true
                    };
                    $(`#escalationDays${levelNo}`).val(level.escalationDays || 0);
                    $(`#skipDays${levelNo}`).val(level.skipDays || 0);
                    $(`#checkIsNotMandatory${levelNo}`).prop('checked', level.isNotMandatory);

                    if (levelNo === 1) {
                        approvalLevelsData[levelNo].approvals.push({
                            radioType: "reportingManager",
                            employeeId: level.approverEmployeeId,
                            employeeName: level.approverName || level.approverDesignationName || "Reporting Manager",
                            designationName: level.approverDesignationName,
                            displayName: level.approverName || level.approverDesignationName || "Reporting Manager"
                        });
                        updateSelectedApprovalsDisplay(levelNo);
                    } else {
                        if (!$(`#level${levelNo}Card`).length) {
                            addApprovalLevel(levelNo);
                        }
                        populateLevelData(level);
                    }
                });
                currentLevel = Math.max(...Object.keys(approvalLevelsData).map(Number)) + 1;
                $('#modalSchemeDetails').modal('show');
            } else {
                showNotification(response.ResponseMessage || 'Error loading approval scheme details', 'error');
            }
        } catch (error) {
            console.error('Error fetching approval scheme levels:', error);
            showNotification('Error loading approval scheme details', 'error');
        } finally {
            $('#btnSave').prop('disabled', false).text('Save All Levels');
        }
    }

    // Populate level data
    function populateLevelData(level) {
        const levelNo = level.sequenceNo;
        const levelData = approvalLevelsData[levelNo];
        $(`#escalationDays${levelNo}`).val(level.escalationDays || 0);
        $(`#skipDays${levelNo}`).val(level.skipDays || 0);
        $(`#checkIsNotMandatory${levelNo}`).prop('checked', level.isNotMandatory);

        if (level.isDepartmentBased) {
            $(`#checkDepartmentBased${levelNo}`).prop('checked', true).trigger('change');
            if (level.approvalSchemeLevelDepartmentVMs && level.approvalSchemeLevelDepartmentVMs.length > 0) {
                levelData.departmentApprovals = level.approvalSchemeLevelDepartmentVMs.map(dept => ({
                    approvalSchemeLevelId: dept.approvalSchemeLevelId || 0,
                    departmentId: dept.departmentId || dept.DepartmentId,
                    departmentName: dept.departmentName || dept.DepartmentName || "",
                    employeeId: dept.deptApproverEmployeeId || dept.DeptApproverEmployeeId,
                    employeeName: dept.deptApproverName || dept.DeptApproverName || "",
                    designationName: dept.deptApproverDesignationName || dept.DeptApproverDesignationName || "",
                    displayName: (dept.deptApproverName || dept.DeptApproverName) ||
                              (dept.deptApproverDesignationName || dept.DeptApproverDesignationName) || ""
                }));
                updateSelectedApprovalsDisplay(levelNo);
            }
        } else if (level.approverEmployeeId) {
            const radioType = getRadioTypeByDesignation(level.approverDesignationName);
            if (radioType) {
                $(`#radio${radioType.charAt(0).toUpperCase() + radioType.slice(1)}${levelNo}`).prop('checked', true);
            }
            levelData.approvals = [{
                radioType: radioType,
                employeeId: level.approverEmployeeId,
                employeeName: level.approverName || "",
                designationName: level.approverDesignationName,
                displayName: level.approverName || level.approverDesignationName
            }];
            updateSelectedApprovalsDisplay(levelNo);
        }
    }

    // Helper function to get radio type by designation
    function getRadioTypeByDesignation(designationName) {
        const radioTypeMap = {
            "Reporting Manager": "reportingManager",
            "National Manager": "nationalManager",
            "HR": "hr",
            "HOD": "hod"
        };
        return radioTypeMap[designationName] || "nationalManager";
    }

    // Delete approval scheme level
    async function deleteApprovalSchemeLevel(schemeId, approvalSchemeLevelId) {
        if (confirm('Are you sure you want to delete this approval scheme level?')) {
            try {
                const response = await $.ajax({
                    url: `@baseUrl/ApprovalManagementAPI/DeleteApprovalSchemeLevel`,
                    method: 'POST',
                    contentType: 'application/json',
                    headers: {
                        'Authorization': 'Bearer ' + Token
                    },
                    data: JSON.stringify({
                        schemeId: schemeId,
                        approvalSchemeLevelId: approvalSchemeLevelId,
                        deletedBy: EmployeeId
                    })
                });

                if (response.isSuccess) {
                    showNotification('Approval scheme level deleted successfully!', 'success');
                    fetchAndLoadApprovalSchemeGrid(CompanyId);
                } else {
                    showNotification(response.responseMessage, 'error');
                }
            } catch (error) {
                console.error('Error deleting approval scheme level:', error);
                showNotification('Error deleting approval scheme level', 'error');
            }
        }
    }
