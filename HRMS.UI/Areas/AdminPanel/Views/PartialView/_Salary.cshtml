                    EmployeeNamePrmaryBank: setNullIfEmpty($('#employeeNamePrimaryBank').val()),

                      UpdatedBy:EmployeeIdSalary
           }
                $.ajax({
                         url: '@baseUrl/EmployeeMasterAPI/UpdateSalaryInfo',
                       type: 'POST',
                       contentType: 'application/json',
