<div class="card">
    <div class="card-header bg-transparent ml-0 py-0">
        <div class="row">
            <div class="col-6">
                <h6 class="pt-2 mb-0">Employee Increment Application</h6>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-transparent">
                <div class="row align-items-center">
                    <div class="col">
                        <h6 class="mb-0">Search Panel</h6>
                    </div>
                    <div class="col-auto">
                        <a href='@Url.Action("AddEmployeeIncrement", "EmployeeIncrement")' class="btn btn-primary btn-sm px-3">Add</a>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <form>
                    <div class="col-md-7 mx-auto">
                        <!-- Row 1: Search By + Search For -->
                        <div class="row mb-1 align-items-center">
                            <div class="col-md-6 form-group d-flex align-items-center">
                                <label for="Leavetypeid" class="mb-0 me-1">Search By:</label>
                                <select class="form-select form-select-sm compact-control" id="Leavetypeid">
                                    <option value="">Grade Name</option>
                                </select>
                            </div>

                            <div class="col-md-6 form-group d-flex align-items-center">
                                <label for="input1" class="mb-0 me-1">Search For:</label>
                                <input type="text" class="form-control form-control-sm compact-control" id="input1">
                            </div>
                        </div>

                        <!-- Row 2: From Date + To Date -->
                        <div class="row mb-1 align-items-center">
                            <div class="col-md-6 form-group d-flex align-items-center">
                                <label for="fromDate" class="mb-0 me-1">From Date:</label>
                                <input type="date" class="form-control form-control-sm compact-control" id="fromDate">
                            </div>

                            <div class="col-md-6 form-group d-flex align-items-center">
                                <label for="todate" class="mb-0 me-1">To Date:</label>
                                <input type="date" class="form-control form-control-sm compact-control" id="todate">
                            </div>
                        </div>

                        <!-- Row 3: By Branch + Reason -->
                        <div class="row mb-1 align-items-center">
                            <div class="col-md-6 form-group d-flex align-items-center">
                                <label for="branchid" class="mb-0 me-1">By Branch:</label>
                                <select class="form-select form-select-sm compact-control" id="branchid">
                                    <option value="0">-- Select--</option>
                                    <option value="1">GKP</option>
                                    <option value="2">Head Office</option>
                                    <option value="3">UP</option>
                                </select>
                            </div>

                            <div class="col-md-6 form-group d-flex align-items-center">
                                <label for="reasonid" class="mb-0 me-1">Reason:</label>
                                <select class="form-select form-select-sm compact-control" id="reasonid">
                                    <option value="0">-- Select--</option>
                                    <option value="1">Add Other Allowance</option>
                                    <option value="2">Department Change</option>
                                    <option value="3">Designation Change</option>
                                    <option value="4">Increment</option>
                                    <option value="5">Internal Transfer</option>
                                    <option value="6">New Joining</option>
                                    <option value="7">PF Calculation</option>
                                    <option value="8">PF Calculation</option>
                                    <option value="9">Probation To Confirmation</option>
                                    <option value="10">Promotion</option>
                                    <option value="11">Revised Salary Structure</option>
                                </select>
                            </div>
                        </div>

                        <!-- Row 4: Status Radio Buttons -->
                        <div class="form-group mb-2 d-flex align-items-center">
                            <label class="mb-0 me-2">Status:</label>

                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="leaveStatus" id="pendingleaveid">
                                <label class="form-check-label" for="pendingleaveid">Pending</label>
                            </div>

                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="leaveStatus" id="Approveid">
                                <label class="form-check-label" for="Approveid">Approved</label>
                            </div>

                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="leaveStatus" id="Rejectedid">
                                <label class="form-check-label" for="Rejectedid">Rejected</label>
                            </div>

                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="leaveStatus" id="processid">
                                <label class="form-check-label" for="processid">In Process</label>
                            </div>
                        </div>

                        <!-- Row 5: Buttons -->
                        <div class="d-flex justify-content-center gap-2 mt-3">
                            <button type="button" class="btn btn-primary btn-sm px-3" id="gobutoonid">GO</button>
                            <button type="button" class="btn btn-secondary btn-sm px-3" id="clearbuttonid">Clear</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

