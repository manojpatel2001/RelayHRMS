<div class="card">
    <div class="card-header bg-transparent ml-0 py-0">
        
            <div class="card">
                <div class="card-header bg-transparent">
                    <div class="row align-items-center">
                        <div class="col">
                            <h6 class="pt-2 mb-0">
                                Add Employee Increment/Decrement Application
                            </h6>
                        </div>
                     </div>
                </div>

                <div class="card-body">
                <form>
                    <div class="col-md-7 mx-auto">
                        <div class="row mb-1 align-items-center">
                            <div class="col-md-6 form-group d-flex align-items-center">
                                <label for="fromDate" class="mb-0 me-1">Date:</label>
                                <input type="date" class="form-control  form-control-sm compact-control" id="fromDate">
                            </div>

                            <div class="col-md-6 form-group d-flex align-items-center">
                                <label for="todate" class="mb-0 me-1">Effect Date:</label>
                                <input type="date" class="form-control  form-control-sm compact-control" id="todate">
                            </div>
                        </div>

                        <div class="row mb-1 align-items-center">
                            <div class="col-md-6 form-group d-flex align-items-center">
                                <label for="selecttypeid" class="me-1 mb-0">Select Type:</label>
                                <select class="form-control  form-control-sm compact-control" id="selecttypeid">
                                    <option value="1">Revise Profile</option>
                                </select>
                            </div>

                            <div class="col-md-6 form-group d-flex align-items-center">
                                <label for="branchid" class="mb-0 me-1">Branch:</label>
                                <select class="form-control  form-control-sm compact-control" id="branchid">
                                    <option value="0">--Select--</option>
                                    <option value="1">GKP</option>
                                    <option value="2">Head Office</option>
                                    <option value="3">UP</option>
                                </select>
                            </div>

                        </div>

                        <div class="row mb-1 align-items-center">
                            <div class="col-md-6 form-group d-flex align-items-center">
                                <label for="employeeid" class="mb-0 me-1">Employee:</label>
                                <select class="form-control  form-control-sm compact-control" id="employeeid">
                                    <option value="0">--Select Employee--</option>
                                </select>
                            </div>

                            <div class="col-md-6 form-group d-flex align-items-center">
                                <label for="resonid" class="mb-0 me-1">Reason:</label>
                                <select class="form-control  form-control-sm compact-control" id="resonid">
                                    <option value="0">--Select--</option>
                                </select>
                            </div>

                        </div>
                    </div>
                </form>
                </div>

            <div class="card-header bg-transparent">
                <div class="row align-items-center">
                   
                    <div class="col-auto">
                        <a href='@Url.Action("EmployeeIncrementApplication", "EmployeeIncrement")' class="btn btn-primary btn-sm px-3">Back</a>
                    </div>
                </div>
            </div>

            </div>
     </div>
</div>


