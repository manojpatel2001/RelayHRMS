    // ✅ UNIFIED FUNCTION - Automatically decides CREATE or UPDATE
    function manageAttendanceLock(selectedRows, isLocking) {
        
        const actionText = isLocking ? 'Locking' : 'Unlocking';
        const actionBtnId = isLocking ? 'Lock' : 'Unlock';

        $(`#btn${actionText}Attendance`).show();
        $(`#btn${actionBtnId}Attendance`).hide();
        showLoader();

        // Separate records based on attendanceLockId
        const recordsToCreate = [];
        const recordsToUpdate = [];

        selectedRows.forEach(row => {
            const attendanceLockId = row.attendanceLockId;

            // ✅ Check if attendanceLockId is NULL, 0, undefined, or empty
            if (!attendanceLockId || attendanceLockId === 0 || attendanceLockId === null) {
                // CREATE - No attendanceLockId exists
                recordsToCreate.push({
                    EmpId: row.employeeId,
                    Month: currentFilters.month,
                    Year: currentFilters.year,
                    IsLocked: isLocking,
                    IsEnabled: true,
                    IsDeleted: false,
                    CreatedBy: Empid
                });
            } else {
                // UPDATE - attendanceLockId exists
                recordsToUpdate.push({
                    EmpId: row.employeeId,
                    AttendanceLockId: attendanceLockId,
                    Month: currentFilters.month,
                    Year: currentFilters.year,
                    IsLocked: isLocking,
                    IsEnabled: true,
                    IsDeleted: false,
                    UpdatedBy: Empid
                });
            }
        });

        // ✅ Execute API calls based on what's needed
        let createPromise = Promise.resolve({ isSuccess: true });
        let updatePromise = Promise.resolve({ isSuccess: true });

        // Call CREATE API if there are records to create
        if (recordsToCreate.length > 0) {
            createPromise = $.ajax({
                url: '@(baseDomainUrl + "/api/AttendanceLockAPI/CreateAttendanceLockEmp")',
                method: 'POST',
                contentType: 'application/json',
                headers: { 'Authorization': 'Bearer ' + Token },
                data: JSON.stringify(recordsToCreate)
            });
        }

        // Call UPDATE API if there are records to update
        if (recordsToUpdate.length > 0) {
            updatePromise = $.ajax({
                url: '@(baseDomainUrl + "/api/AttendanceLockAPI/UpdateAttendanceLock")',
                method: 'PUT',
                contentType: 'application/json',
                headers: { 'Authorization': 'Bearer ' + Token },
                data: JSON.stringify(recordsToUpdate)
            });
        }

        // ✅ Wait for both operations to complete
        Promise.all([createPromise, updatePromise])
            .then(([createResponse, updateResponse]) => {
                hideLoader();
                $(`#btn${actionText}Attendance`).hide();
                $(`#btn${actionBtnId}Attendance`).show();

                // Check if both operations succeeded
                const createSuccess = !recordsToCreate.length || createResponse?.isSuccess;
                const updateSuccess = !recordsToUpdate.length || updateResponse?.isSuccess;

                if (createSuccess && updateSuccess) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: `Attendance ${isLocking ? 'locked' : 'unlocked'} successfully for ${selectedRows.length} employee(s).`,
                        timer: 2000,
                        showConfirmButton: false
                    }).then(() => {
                        location.reload();
                    });
                } else {
                    const errorMsg = !createSuccess ? createResponse?.responseMessage : updateResponse?.responseMessage;
                    Swal.fire('Error', errorMsg || `Failed to ${actionText.toLowerCase()} attendance.`, 'error');
                }
            })
            .catch((error) => {
                hideLoader();
                $(`#btn${actionText}Attendance`).hide();
                $(`#btn${actionBtnId}Attendance`).show();
                console.error(`Error ${actionText.toLowerCase()} attendance:`, error);
                Swal.fire('Error', `Failed to ${actionText.toLowerCase()} attendance. Please try again.`, 'error');
            });
    }
